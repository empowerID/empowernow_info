---
interface Props { }
const p = Astro.props as Props;
---
<div class="composite vignette" aria-hidden="true">
  <div class="panel">
    <div class="title">AuthZEN Decision</div>
    <pre>{`{
  "decision": "Permit",
  "constraints": [{ "id": "stream_tokens_max", "value": 2048 }],
  "obligations": [{ "id": "budget_hold", "call_id": "abc-123" }],
  "ttl_ms": 5000
}`}</pre>
  </div>
  <div class="arrow">→</div>
  <div class="panel">
    <div class="title">HTTP 402 (budget)</div>
    <pre>{`HTTP/1.1 402 Payment Required
{
  "error": "budget_exceeded",
  "call_id": "abc-123"
}`}</pre>
  </div>
  <div class="arrow">→</div>
  <div class="panel">
    <div class="title">Receipt</div>
    <pre>{`{
  "receipt_id": "r-001",
  "call_id": "abc-123",
  "hash": "...",
  "ts": "2025-09-27T12:00:00Z"
}`}</pre>
  </div>
</div>
<style>
.composite{display:grid;grid-template-columns:1fr auto 1fr auto 1fr;gap:10px;align-items:center}
.panel{background:rgba(11,28,61,.8);border:1px solid var(--border-soft);border-radius:12px;padding:10px}
.panel .title{color:var(--on-surface);font-size:12px;margin:0 0 6px}
pre{margin:0;color:var(--on-muted);font-size:11px;line-height:1.3}
.arrow{color:var(--color-accent);opacity:.8}
@media (max-width: 840px){.composite{grid-template-columns:1fr;}.arrow{display:none}}
</style>


