---
interface Crumb { name: string; item: string }
interface Props { items: Crumb[] }
const p = Astro.props as Props;
const data = {"@context":"https://schema.org","@type":"BreadcrumbList","itemListElement":p.items.map((c,i)=>({"@type":"ListItem", position: i+1, name:c.name, item:c.item}))};
---
<script type="application/ld+json">{JSON.stringify(data)}</script>
