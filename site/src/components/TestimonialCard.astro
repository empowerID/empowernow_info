---
interface Props { quote: string; author: string; role?: string }
const p = Astro.props as Props;
const review = {"@context":"https://schema.org","@type":"Review","reviewBody":p.quote,"author":{"@type":"Person","name":p.author}};
---
<div class="glass-card" style="padding:20px">
	<p style="font-size:18px;line-height:1.6;margin:0 0 12px">“{p.quote}”</p>
	<div style="color:#9ba3b7">— {p.author}{p.role ? `, ${p.role}` : ''}</div>
	<script type="application/ld+json">{JSON.stringify(review)}</script>
</div>
