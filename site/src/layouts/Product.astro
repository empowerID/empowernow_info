---
interface CTA { label: string; href: string }
interface Props {
	title: string;
	description: string;
	canonical: string;
	headline: string;
	subhead?: string;
	keyBenefits?: string[];
	primaryCTA?: CTA;
	secondaryCTA?: CTA;
	jsonLdProduct?: Record<string, any>;
}
const p = Astro.props as Props;
---
<html lang="en">
	<head>
		<title>{p.title}</title>
		<meta name="description" content={p.description} />
		<link rel="canonical" href={new URL(p.canonical, Astro.site)} />
		{p.jsonLdProduct && <script type="application/ld+json">{JSON.stringify(p.jsonLdProduct)}</script>}
	</head>
	<body>
		<import Base from './Base.astro' />
		<Base title={p.title} description={p.description} canonical={p.canonical}>
			<section class="container" style="padding:72px 0 32px">
				<h1 class="display" style="margin:0 0 12px">{p.headline}</h1>
				{p.subhead && <p style="color:#9ba3b7;max-width:860px">{p.subhead}</p>}
				<div style="display:flex;gap:12px;flex-wrap:wrap;margin-top:8px">
					{p.primaryCTA && <a class="btn btn-primary" href={p.primaryCTA.href}>{p.primaryCTA.label}</a>}
					{p.secondaryCTA && <a class="btn" href={p.secondaryCTA.href}>{p.secondaryCTA.label}</a>}
				</div>
			</section>
			{p.keyBenefits && p.keyBenefits.length > 0 && (
				<section class="container" style="padding:8px 0 24px">
					<h2 class="section-title">Why it wins</h2>
					<div class="grid-3" style="display:grid;grid-template-columns:repeat(3,1fr);gap:16px">
						{p.keyBenefits.map((b) => <div class="card" style="background:rgba(11,28,61,.85);border:1px solid rgba(0,231,246,.2);border-radius:12px;padding:16px">{b}</div>)}
					</div>
				</section>
			)}
			<slot name="how" />
			<slot name="proof" />
			<slot name="related" />
		</Base>
	</body>
</html>
