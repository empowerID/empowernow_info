---
const { title = 'EmpowerNow', description = 'Identity & Authorization Fabric', canonical = '/', ogImage } = Astro.props as any;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={new URL(canonical, Astro.site)} />
		<link rel="icon" href="/favicon.svg" />
		{ogImage && <meta property="og:image" content={ogImage} />}
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
		<style>
			:root{--color-bg:#0E0E10;--color-primary:#6C4CFF;--color-secondary:#B326FF;--color-accent:#00E7F6;--color-success:#B6FF3C;--color-warning:#FFC266;--color-surface:rgba(255,255,255,.06);--navy:#0B1C3D}
			html,body{margin:0;background:var(--navy);color:#fff;font-family:Inter,-apple-system,sans-serif}
			.container{max-width:960px;margin:0 auto;padding:0 24px}
			nav{position:sticky;top:0;background:rgba(11,28,61,.8);backdrop-filter:blur(20px);border-bottom:1px solid rgba(0,231,246,.2);z-index:1000}
			nav .wrap{display:flex;justify-content:space-between;align-items:center;padding:16px 0}
			.nav-links{display:flex;gap:20px;align-items:center;list-style:none;margin:0;padding:0}
			.nav-links a{color:rgba(255,255,255,.9);text-decoration:none;white-space:nowrap;font-size:15px}
			.nav-links a:hover{color:var(--color-accent)}
			.btn{display:inline-flex;align-items:center;gap:8px;padding:10px 16px;border-radius:10px;border:1px solid rgba(255,255,255,.18);text-decoration:none;color:#fff}
			.btn-primary{background:var(--color-accent);color:var(--navy);box-shadow:0 6px 22px rgba(0,231,246,.25)}
			main{min-height:60vh}
			footer{border-top:1px solid rgba(255,255,255,.1);padding:32px 0;margin-top:48px}
		</style>
	</head>
	<body>
		<nav>
			<div class="container wrap">
				<a href="/" style="color:var(--color-accent);font-weight:700;text-decoration:none">EmpowerNow</a>
				<ul class="nav-links">
					<li><a href="/products/">Products</a></li>
					<li><a href="/solutions/">Solutions</a></li>
					<li><a href="/resources/">Resources</a></li>
					<li><a href="/docs/">Docs</a></li>
					<li><a href="/pricing/">Pricing</a></li>
					<li><a href="/company/">Company</a></li>
					<li><a class="btn btn-primary" href="/demo/">Book Demo</a></li>
				</ul>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer>
			<div class="container" style="display:flex;justify-content:space-between;align-items:center">
				<div>Â© {new Date().getFullYear()} EmpowerNow</div>
				<div style="display:flex;gap:16px"><a href="/trust/">Trust</a><a href="/resources/">Resources</a></div>
			</div>
		</footer>
	</body>
</html>
