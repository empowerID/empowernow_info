---
import Base from '../../layouts/Base.astro';
import BreadcrumbsJsonLd from '../../components/BreadcrumbsJsonLd.astro';
import ArticleJsonLd from '../../components/ArticleJsonLd.astro';
const industry = (Astro.params.industry as string) || 'industry';
const title = `${industry.charAt(0).toUpperCase()+industry.slice(1)} — EmpowerNow`;
const description = `Solutions for ${industry}: secure agents, govern access, and audit.`;
const canonical = `/industries/${industry}/`;
const outcomes = [
	'Safely adopt agentic AI with zero shared credentials',
	'Govern access with AuthZEN PDP constraints',
	'Audit every decision with tamper-evident receipts',
];
---
<Base title={title} description={description} canonical={canonical}>
	<BreadcrumbsJsonLd items={[
		{ name: 'Home', item: new URL('/', Astro.site).toString() },
		{ name: 'Industries', item: new URL('/industries/', Astro.site).toString() },
		{ name: industry, item: new URL(canonical, Astro.site).toString() },
	]} />
	<ArticleJsonLd type="Article" title={title} description={description} url={new URL(canonical, Astro.site).toString()} />
	<section class="container" style="padding:56px 0 24px">
		<div class="glass-card" style="padding:24px">
			<h1 class="display" style="margin:0 0 8px">{industry}</h1>
			<p style="color:#9ba3b7;margin:0">Outcome-focused architecture for regulated, SaaS, and enterprise teams.</p>
			<div style="display:flex;gap:12px;flex-wrap:wrap;margin-top:16px">
				<a class="btn btn-primary" href="/solutions/">Explore solutions</a>
				<a class="btn" href="/products/">Browse products</a>
			</div>
		</div>
	</section>
	<section class="container" style="padding:8px 0 24px">
		<h2 class="section-title">Key outcomes</h2>
		<div class="grid-3">
			{outcomes.map(o => <div class="glass-card" style="padding:16px">{o}</div>)}
		</div>
	</section>
	<section class="container" style="padding:8px 0 24px">
		<h2 class="section-title">Mapped capabilities</h2>
		<div class="grid-3">
			<div class="glass-card" style="padding:16px">ARIA Shield — application-aware BFF and governance</div>
			<div class="glass-card" style="padding:16px">MCP Gateway — agent/tool enforcement</div>
			<div class="glass-card" style="padding:16px">AuthZEN PDP — fine-grained authorization</div>
		</div>
	</section>
</Base>
