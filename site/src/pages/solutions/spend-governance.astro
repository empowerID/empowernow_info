---
import Base from '../../layouts/Base.astro';
import Solution from '../../layouts/Solution.astro';
import MediaVideo from '../../components/MediaVideo.astro';
import AuroraText from '../../components/AuroraText.astro';
const title = 'Spend Governance — Control AI Costs';
const description = 'Use ARIA Shield + Receipts + Data Collector to cap spend at stream‑time, emit receipts, and drive FinOps dashboards.';
const canonical = '/solutions/spend-governance/';
const headline = `<span class="aurora-text">Spend</span> <span class="h1-gradient">Governance</span>`;
---
<Base title={title} description={description} canonical={canonical}>
    <Solution title={title} description={description} canonical={canonical} headline={headline} outcomes={[ 'Prevent overruns', 'Hold budgets at stream‑time', 'Audit actuals' ]} primaryCTA={{ label: 'Watch 90‑sec demo', href: '/resources/demo/' }} secondaryCTA={{ label: 'Explore receipts', href: '/products/receipts/' }} docsLinks={[ { href: 'https://empowerid.github.io/empowernow_docs/docs/services/bff/explanation/overview/', label: 'BFF Overview' } ]} wwwLinks={[ { href: '/products/aria-shield/', label: 'ARIA Shield' }, { href: '/products/receipts/', label: 'Receipt Vault' }, { href: '/products/data-collector/', label: 'Data Collector' } ]} keywords={[ 'bff', 'authzen' ]} heroIllustration="images/illustrations/large/services/hero-services-spend-governance.png" heroIllustrationAlt="Visual representation of spend governance with budget control and enforcement" heroIllustrationWidth={800} heroIllustrationHeight={600}>
		<fragment slot="how">
			<section class="container" style="padding:8px 0 24px">
				<h2 class="section-title">How it works</h2>
				<p style="color:#9ba3b7">Budgets set limits; ARIA Shield enforces stream caps; receipts capture actuals; Data Collector aggregates into dashboards and alerts.</p>
			</section>
      <section class="container" style="padding:8px 0 24px">
        <h2 class="section-title">FAQ</h2>
        <ul style="color:#9ba3b7;line-height:1.8">
          <li><strong>How fast do budgets take effect?</strong> Immediately at stream‑time via Shield (HTTP 402 on exceed).</li>
          <li><strong>How do we attribute spend?</strong> Receipts include decision, tool/schema, and cost fields per call.</li>
          <li><strong>Can we alert on cap approaches?</strong> Yes. Analytics aggregates receipts and triggers alerts.</li>
        </ul>
      </section>
      <section class="container" style="padding:8px 0 24px">
        <h2 class="section-title">Related comparisons</h2>
        <div class="grid-3">
          <a class="glass-card" href={`${import.meta.env.BASE_URL}comparisons/gateway-vs-api-gateway/`} style="padding:16px"><h3 style="margin:0 0 8px">MCP Gateway vs API Gateway</h3><p style="color:#9ba3b7;margin:0">Why you need pre‑exec policy and receipts, not just routing.</p></a>
          <a class="glass-card" href={`${import.meta.env.BASE_URL}resources/standards/authzen/`} style="padding:16px"><h3 style="margin:0 0 8px">AuthZEN overview</h3><p style="color:#9ba3b7;margin:0">Modern JSON decisions with constraints and obligations.</p></a>
        </div>
      </section>
      <section style="padding:32px 0 48px">
        <div class="container">
          <h2 class="section-title" style="margin-bottom:24px">Watch: Spend Governance in 90 seconds</h2>
        </div>
        <div class="panel-glow" style="padding:16px;max-width:1200px;margin:0 auto;width:100%">
          <div style="max-width:900px;margin:0 auto;width:100%">
            <MediaVideo 
              src={{ mp4: `${import.meta.env.BASE_URL}videos/solutions/spend/Controlling_Runaway_AI.mp4` }} 
              poster={`${import.meta.env.BASE_URL}images/video-placeholder/Controlling_Runaway_AI.jpg`}
              aspect="16/9" 
              title="Spend Governance demo" 
              autoPlay={true}
              muted={false}
              defer 
            />
          </div>
        </div>
      </section>
		</fragment>
	</Solution>
</Base>
