---
import Base from '../../layouts/Base.astro';
import Solution from '../../layouts/Solution.astro';
import AIAgentGovernance from '../../components/AIAgentGovernance.tsx';
import AuroraText from '../../components/AuroraText.astro';
const title = 'Delegated Authorization — Safely Act on Behalf';
const description = 'Use AuthZEN PDP + Membership to represent roles and delegations; enforce per‑action constraints across services.';
const canonical = '/solutions/delegated-authorization/';
const headline = `<span class="aurora-text">Delegated</span> <span class="h1-gradient">Authorization</span>`;
---
<Base title={title} description={description} canonical={canonical}>
    <Solution title={title} description={description} canonical={canonical} headline={headline} outcomes={[ 'Principled delegation', 'Per‑action constraints', 'Auditable access' ]} primaryCTA={{ label: 'Open Quickstart', href: '/docs/' }} secondaryCTA={{ label: 'Watch 10‑min demo', href: '/resources/demo/' }} docsLinks={[ { href: 'https://empowerid.github.io/empowernow_docs/docs/services/pdp/', label: 'PDP Docs' } ]} wwwLinks={[ { href: '/products/pdp/', label: 'AuthZEN PDP' }, { href: '/products/membership/', label: 'Membership' } ]} keywords={[ 'authzen' ]} heroIllustration="images/illustrations/large/services/hero-services-delegated-authorization.png" heroIllustrationAlt="Visual representation of delegated authorization showing constrained empowerment flow" heroIllustrationWidth={800} heroIllustrationHeight={600}>
		<fragment slot="how">
			<section class="container" style="padding:8px 0 24px">
				<h2 class="section-title">How it works</h2>
				<p style="color:#9ba3b7">Membership models orgs, teams, roles, and delegations. PDP evaluates each request with these relationships and policy to return decisions.</p>
				<div class="glass-card" style="padding:12px;margin-top:8px">
					<AIAgentGovernance client:visible caption="Delegated authorization for people and agents — identities, relationships, consent/OBO, policy, and enforcement." />
					<div style="display:flex;gap:10px;flex-wrap:wrap;margin-top:8px">
						<a class="btn" href={`/products/pdp/`}>PDP deep‑dive →</a>
						<a class="btn btn-ghost" href={`/products/membership/`}>Explore Membership →</a>
					</div>
				</div>
			</section>
		</fragment>
        <fragment slot="standards">
            <section class="container" style="padding:8px 0 24px">
                <h2 class="section-title">Standards</h2>
                <ul style="color:#9ba3b7;line-height:1.8">
                    <li>OpenID AuthZEN decisions with obligations/TTL</li>
                    <li>Token Exchange (RFC 8693) for on‑behalf‑of</li>
                    <li>SCIM for membership synchronization</li>
                </ul>
            </section>
        </fragment>
	</Solution>
</Base>
