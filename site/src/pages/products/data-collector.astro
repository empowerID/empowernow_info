---
import Base from '../../layouts/Base.astro';
import Product from '../../layouts/Product.astro';
import JsonLd from '../../components/JsonLd.astro';
const title = 'Data Collector â€” Fresh context and spend signals';
const description = 'Collect identities/entitlements with lineage + model usage/cost signals; feed PDP PIPs and budget decisions.';
const canonical = '/products/data-collector/';
const jsonLdProduct = {"@context":"https://schema.org","@type":"Product","name":"Data Collector","brand":{"@type":"Brand","name":"EmpowerNow"},"description":description,"url":new URL(canonical, Astro.site)};
---
<Base title={title} description={description} canonical={canonical}>
	<JsonLd data={jsonLdProduct} />
    <Product title={title} description={description} canonical={canonical} productKey="collector" eyebrow="ðŸ§­ DATA COLLECTOR" headline="Keep PDP context fresh. See spend in real time." subhead="Collect identities/entitlements with lineage + model usage/cost signals; feed PDP PIPs and budget decisions." targetICP={[ 'FinOps', 'Platform Teams', 'IAM' ]} keyBenefits={[ 'Freshness + lineage for identity context', 'Perâ€‘request cost telemetry for budgets', 'Export to SIEM/BI; receipts linkage' ]} primaryCTA={{ label: 'Book demo', href: `${import.meta.env.BASE_URL}demo/` }} secondaryCTA={{ label: 'Read docs', href: 'https://empowerid.github.io/empowernow_docs/docs/services/registry/' }} tertiaryCTA={{ label: 'Quickstart', href: `${import.meta.env.BASE_URL}docs/` }} docsLinks={[ { href: 'https://empowerid.github.io/empowernow_docs/docs/services/registry/', label: 'Collector/Registry Docs' } ]} wwwLinks={[ { href: '/solutions/spend-governance/', label: 'Spend Governance' } ]} keywords={[ 'inventory','lineage','finops' ]}>
        <fragment slot="how">
            <section class="container" style="padding:8px 0 24px">
                <h2 class="section-title">Lineage & freshness</h2>
                <div class="diagram vignette" style="margin-top:12px">
                    <div style="display:grid;grid-template-columns:repeat(5,1fr);align-items:center;gap:8px">
                        <div class="node">Sources</div>
                        <div class="flow"></div>
                        <div class="node">Normalize</div>
                        <div class="flow"></div>
                        <div class="node">Lineage</div>
                    </div>
                    <div style="display:grid;grid-template-columns:repeat(3,1fr);align-items:center;gap:8px;margin-top:10px">
                        <div class="node">Kafka</div>
                        <div class="node">ClickHouse</div>
                        <div class="node">PDP PIP</div>
                    </div>
                </div>
            </section>
            <section class="container" style="padding:8px 0 24px">
                <h2 class="section-title">Optional: ClickHouse query</h2>
                <pre class="glass-card" style="padding:12px;overflow:auto"><code>{`
SELECT policy, sum(cost_usd) AS spend
FROM receipts
WHERE ts >= now() - INTERVAL 1 DAY
GROUP BY policy
ORDER BY spend DESC
`}</code></pre>
            </section>
        </fragment>
	</Product>
</Base>
