---
import Base from '../../layouts/Base.astro';
import Product from '../../layouts/Product.astro';
import JsonLd from '../../components/JsonLd.astro';
const title = 'Data Collector — Spend & Usage Analytics';
const description = 'Capture model usage, costs, and outcomes in real time. Drive budgets and optimizations.';
const canonical = '/products/data-collector/';
const jsonLdProduct = {"@context":"https://schema.org","@type":"Product","name":"Data Collector","brand":{"@type":"Brand","name":"EmpowerNow"},"description":description,"url":new URL(canonical, Astro.site)};
---
<Base title={title} description={description} canonical={canonical}>
	<JsonLd data={jsonLdProduct} />
	<Product title={title} description={description} canonical={canonical} headline="Know your AI spend and outcomes" subhead="Collect model usage and cost signals; feed budgets, alerts, and optimization decisions." targetICP={[ 'FinOps', 'Platform Teams' ]} keyBenefits={[ 'Per‑request cost telemetry', 'Budget thresholds & alerts', 'Dashboards and export' ]} primaryCTA={{ label: 'Book demo', href: '/demo/' }} wwwLinks={[ { href: '/solutions/spend-governance/', label: 'Spend Governance' } ]}>
	</Product>
</Base>
