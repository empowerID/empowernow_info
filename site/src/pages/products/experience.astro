	<script>
		if ('IntersectionObserver' in window) {
			const elements = [...document.querySelectorAll('.reveal-on-scroll')];
			const observer = new IntersectionObserver((entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add('is-visible');
						observer.unobserve(entry.target);
					}
				});
			}, { threshold: 0.25 });
			elements.forEach((el) => observer.observe(el));
		}
	</script>

	<!-- Studio Bar Navigation -->
	<script>
		(function() {
			const studioBar = document.querySelector('.studio-bar');
			const tabsList = document.getElementById('studio-tabs-list');
			const heroSection = document.querySelector('.hero-plate');
			
			if (!studioBar || !tabsList || !heroSection) return;
			
			// Find all sections with section-title h2
			const sectionTitles = document.querySelectorAll('h2.section-title');
			const sections = [];
			
			sectionTitles.forEach((title) => {
				let section = title.parentElement;
				while (section && section.tagName !== 'SECTION') {
					section = section.parentElement;
				}
				if (section && section.hasAttribute('id') && section.offsetHeight > 50) {
					const id = section.getAttribute('id');
					const label = title.textContent?.trim();
					if (id && label) {
						sections.push({ id, label, element: section });
					}
				}
			});

			// Add "Why it wins" section
			const whySection = document.getElementById('why');
			if (whySection && whySection.offsetHeight > 50) {
				sections.unshift({ id: 'why', label: 'Why it wins', element: whySection });
			}

			// Create tabs
			sections.forEach((sec) => {
				const li = document.createElement('li');
				li.setAttribute('role', 'presentation');
				const a = document.createElement('a');
				a.setAttribute('role', 'tab');
				a.setAttribute('href', `#${sec.id}`);
				a.className = 'studio-tab-btn';
				const span = document.createElement('span');
				span.textContent = sec.label;
				a.appendChild(span);
				li.appendChild(a);
				tabsList.appendChild(li);
			});

			const tabButtons = document.querySelectorAll('.studio-tab-btn');
			const sectionElements = sections.map(s => s.element);
			const stickyOffset = heroSection.offsetHeight - 80;

			function updateSticky() {
				if (!studioBar) return;
				if (window.scrollY > stickyOffset) {
					studioBar.classList.add('is-sticky');
				} else {
					studioBar.classList.remove('is-sticky');
				}
			}

			function updateActiveTab() {
				const scrollPos = window.scrollY + 250;
				let activeId = '';
				
				sectionElements.forEach((section) => {
					const top = section.offsetTop;
					const bottom = top + section.offsetHeight;
					if (scrollPos >= top - 150 && scrollPos < bottom + 50) {
						activeId = section.getAttribute('id') || '';
					}
				});

				tabButtons.forEach((btn) => {
					const btnId = (btn.getAttribute('href') || '').replace('#', '');
					if (btnId === activeId) {
						btn.classList.add('is-active');
						btn.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
					} else {
						btn.classList.remove('is-active');
					}
				});
			}

			tabButtons.forEach((btn) => {
				btn.addEventListener('click', (e) => {
					e.preventDefault();
					const id = (btn.getAttribute('href') || '').replace('#', '');
					const section = document.getElementById(id);
					if (section) {
						const top = section.offsetTop - 150;
						window.scrollTo({ top, behavior: 'smooth' });
						tabButtons.forEach((b) => b.classList.remove('is-active'));
						btn.classList.add('is-active');
					}
				});
			});

			let ticking = false;
			window.addEventListener('scroll', () => {
				if (!ticking) {
					window.requestAnimationFrame(() => {
						updateSticky();
						updateActiveTab();
						ticking = false;
					});
					ticking = true;
				}
			}, { passive: true });

			updateSticky();
			updateActiveTab();
		})();
	</script>

