---
import Base from '../../layouts/Base.astro';
import Product from '../../layouts/Product.astro';
import MediaVideo from '../../components/MediaVideo.astro';
import JsonLd from '../../components/JsonLd.astro';
import AuroraText from '../../components/AuroraText.astro';
const title = 'CRUD Service | EmpowerNow';
const description = 'Turn any API/workflow/DB into a governed MCP tool — no code. Secure by design; pre‑approved actions; reusable across agents.';
const canonical = '/products/crud/';
const jsonLdProduct = {"@context":"https://schema.org","@type":"Product","name":"CRUD Service","brand":{"@type":"Brand","name":"EmpowerNow"},"description":description,"url":new URL(canonical, Astro.site),"category":"Workflow Automation","audience":{"@type":"Audience","audienceType":"Enterprise IAM, Platform Engineering, DevOps, App Teams, Security"},"offers":{"@type":"Offer","priceCurrency":"USD","price":"500","priceSpecification":{"@type":"UnitPriceSpecification","price":"500","priceCurrency":"USD","unitText":"governed endpoint / month"}}};
const headline = `<span class="aurora-text">CRUD</span> <span class="h1-gradient">Service</span>`;
---
<Base title={title} description={description} canonical={canonical}>
	<JsonLd data={jsonLdProduct} />
	<Product
		title={title}
		description={description}
		canonical={canonical}
		productKey="crud"
		eyebrow="CRUD SERVICE"
		headline={headline}
		subhead="No‑code connectors and visual workflows. Publish tools/resources to MCP, Functions, and Microsoft Copilot."
		targetICP={[ 'Platform Engineering', 'DevOps', 'App Teams', 'Security' ]}
		keyBenefits={[
			'No‑code connectors for APIs/DBs with policy hooks',
			'Visual graph workflows with approvals and SLOs',
			'Publish tools/resources to MCP, Microsoft Copilot, Functions',
			'Governed execution: schema pins, idempotency, retries',
			'Cryptographic receipts and audit built‑in'
		]}
		benefitIcons={[
			'icon-gear-spin.png',
			'icon-clipboard-path.png',
			'icon-rocket.png',
			'icon-shield-aria.png',
			'icon-receipt.png'
		]}
		primaryCTA={{ label: 'Quickstart', href: `https://empowerid.github.io/empowernow_docs/docs/services/crud-service/how-to/mcp-quickstart/` }}
		secondaryCTA={{ label: 'Book demo', href: `${import.meta.env.BASE_URL}demo/` }}
		tertiaryCTA={{ label: 'Read docs', href: 'https://empowerid.github.io/empowernow_docs/docs/services/crud-service/' }}
		docsLinks={[
			{ href: 'https://empowerid.github.io/empowernow_docs/docs/services/crud-service/', label: 'CRUD Service Docs' },
			{ href: 'https://empowerid.github.io/empowernow_docs/docs/services/crud-service/explanation/idempotency/', label: 'Idempotency' },
			{ href: 'https://empowerid.github.io/empowernow_docs/docs/services/crud-service/explanation/approvals-overview/', label: 'Approvals' }
		]}
		wwwLinks={[ { href: '/solutions/delegated-authorization/', label: 'Delegated Authorization' } ]}
		keywords={[ 'mcp','openai functions','copilot','idempotency' ]}
		heroIllustration="images/illustrations/large/products/hero-products-crud.png"
		heroIllustrationAlt="Visual representation of CRUD Service packaging and publishing tools across multiple agent platforms"
		heroIllustrationWidth={800}
		heroIllustrationHeight={600}
	>
		<fragment slot="proof">
			<section id="crud-video" class="container" style="padding:8px 0 24px">
				<h2 class="section-title">See it</h2>
				<div class="glass-card" style="padding:12px">
					<MediaVideo src={{ mp4: `${import.meta.env.BASE_URL}videos/products/crud/CRUD_Service__AI_Workflows.mp4` }} aspect="16/9" title="CRUD Service — AI Workflows" defer />
				</div>
			</section>
		</fragment>
		<fragment slot="cta-after">
			<div style="margin-top:12px"><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}resources/strategy/ai-middleware-leadership/`}>Read the Strategy Memo →</a></div>
		</fragment>
		<fragment slot="standards">
			<div class="partner-grid" style="display:grid;grid-template-columns:repeat(3,1fr);gap:20px;margin-bottom:16px">
				<div class="glass-card hover-rise" style="padding:16px;display:flex;align-items:center;gap:12px;border:1px solid rgba(182,255,60,.3)">
					<img src={`${import.meta.env.BASE_URL}images/partners/anthropic-logo.svg`} alt="Anthropic" style="width:48px;height:48px" />
					<span style="color:#e8ecff;font-weight:500">MCP</span>
				</div>
				<div class="glass-card hover-rise" style="padding:16px;display:flex;align-items:center;gap:12px;border:1px solid rgba(0,231,246,.3)">
					<img src={`${import.meta.env.BASE_URL}images/partners/openai-logo.svg`} alt="OpenAI" style="width:48px;height:48px" />
					<span style="color:#e8ecff;font-weight:500">OpenAI Functions</span>
				</div>
				<div class="glass-card hover-rise" style="padding:16px;display:flex;align-items:center;gap:12px;border:1px solid rgba(108,76,255,.3)">
					<img src={`${import.meta.env.BASE_URL}images/partners/microsoft-logo.svg`} alt="Microsoft" style="width:48px;height:48px" />
					<span style="color:#e8ecff;font-weight:500">Microsoft Copilot</span>
				</div>
			</div>
		</fragment>
		<fragment slot="examples">
			<div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:20px">
				<div class="panel-glow hover-rise" style="padding:20px">
					<div style="display:flex;align-items:center;gap:12px;margin-bottom:12px">
						<img src={`${import.meta.env.BASE_URL}images/icons/icon-shield-check.png`} alt="" style="width:40px;height:40px;flex-shrink:0;opacity:0.9" />
						<h3 style="margin:0;color:#e8ecff;font-size:16px;font-weight:600">Create Contractor (Entra)</h3>
					</div>
					<p style="margin:0;color:#9ba3b7;line-height:1.6;font-size:14px">Form + approval + retry.</p>
				</div>
				<div class="panel-glow hover-rise" style="padding:20px">
					<div style="display:flex;align-items:center;gap:12px;margin-bottom:12px">
						<img src={`${import.meta.env.BASE_URL}images/icons/icon-gear-spin.png`} alt="" style="width:40px;height:40px;flex-shrink:0;opacity:0.9" />
						<h3 style="margin:0;color:#e8ecff;font-size:16px;font-weight:600">Provision Repo (GitHub)</h3>
					</div>
					<p style="margin:0;color:#9ba3b7;line-height:1.6;font-size:14px">Schema-pinned; egress allowlist.</p>
				</div>
			</div>
		</fragment>
		<fragment slot="how">
			<section class="container reveal-on-scroll" id="crud-no-code" style="padding:8px 0 24px">
				<div class="product-rail rail--crud" aria-hidden="true" style="margin-bottom:24px"></div>
				<h2 class="section-title">How it works</h2>
				<ol class="numbered" style="display:flex;flex-direction:column;gap:20px;list-style:none;padding:0">
					<li style="display:flex;gap:16px;align-items:center">
						<img src={`${import.meta.env.BASE_URL}images/icons/icon-gear-spin.png`} alt="" style="width:48px;height:48px;flex-shrink:0" />
						<span style="color:#9ba3b7">Receive operation → dedupe by <code>event_id</code> → persist.</span>
					</li>
					<li style="display:flex;gap:16px;align-items:center">
						<img src={`${import.meta.env.BASE_URL}images/icons/icon-clipboard-path.png`} alt="" style="width:48px;height:48px;flex-shrink:0" />
						<span style="color:#9ba3b7">Orchestrate approvals and execute with retries/SLOs.</span>
					</li>
					<li style="display:flex;gap:16px;align-items:center">
						<img src={`${import.meta.env.BASE_URL}images/icons/icon-receipt.png`} alt="" style="width:48px;height:48px;flex-shrink:0" />
						<span style="color:#9ba3b7">Emit events and signed receipts; stream to analytics.</span>
					</li>
				</ol>
			</section>
			<section class="container reveal-on-scroll" id="crud-publish-many" style="padding:8px 0 24px">
				<h2 class="section-title">No‑code connectors</h2>
				<p style="color:#9ba3b7;margin-bottom:16px">Connect Entra/Okta/AD/ServiceNow/Salesforce/SAP and custom APIs in minutes — no code. Author parameters once; enforce policy hooks everywhere.</p>
				<div style="margin-bottom:12px"><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}resources/research/`}>Adapter catalog</a></div>
				<div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(320px,1fr));gap:16px">
					<div class="glass-card hover-rise" style="padding:8px">
						<img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/systemdefinitions_list.png`} alt="Catalog of configured systems" width="360" height="202" loading="lazy" style="display:block;width:100%;height:auto;border-radius:8px;cursor:zoom-in" />
					</div>
					<div class="glass-card hover-rise" style="padding:8px">
						<img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/systemdefinitions_fieldglass_designer.png`} alt="No‑code connector designer listing API commands" width="360" height="202" loading="lazy" style="display:block;width:100%;height:auto;border-radius:8px;cursor:zoom-in" />
					</div>
				</div>
			</section>
			<div class="section-divider"></div>
			<section class="container reveal-on-scroll" id="crud-compare" style="padding:8px 0 24px">
				<h2 class="section-title">Author once → publish many</h2>
				<p style="color:#9ba3b7;margin-bottom:16px">Turn any API/DB into agent‑safe tools and resources; publish across platforms with policy hooks: Anthropic MCP, OpenAI Functions, Microsoft Copilot, Google Vertex, AWS Bedrock, LangChain/LangGraph.</p>
				<div class="glass-card hover-rise" style="padding:12px;max-width:600px">
					<img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/mcp_prompts.png`} alt="MCP prompts catalog with tags" width="520" height="292" loading="lazy" style="display:block;width:100%;height:auto;border-radius:8px;cursor:zoom-in" />
				</div>
			</section>
			<div class="section-divider"></div>
			<section class="container reveal-on-scroll" id="crud-positioning" style="padding:8px 0 24px">
				<h2 class="section-title">How we compare to general automation platforms</h2>
				<div class="panel-glow comparison-table-wrapper">
					<table class="comparison-table">
						<thead>
							<tr>
								<th>Capability</th>
								<th>General automation platforms</th>
								<th>CRUD Service</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>Connector breadth</td>
								<td>Breadth of SaaS connectors and templates</td>
								<td>Enterprise IAM depth: approvals, policy, receipts</td>
							</tr>
							<tr>
								<td>Use case focus</td>
								<td>Great for quick, citizen‑developer automation</td>
								<td>Visual workflows + no‑code connectors</td>
							</tr>
							<tr>
								<td>Policy & audit</td>
								<td>Light policy and audit by default</td>
								<td>Publish as MCP tools/resources across runtimes</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div style="display:flex;gap:12px;flex-wrap:wrap;margin-top:16px"><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}solutions/delegated-authorization/`}>Reference architecture</a><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}resources/research/`}>Adapter catalog</a></div>
			</section>
			<div class="section-divider"></div>
			<section class="container reveal-on-scroll" id="crud-proof" style="padding:8px 0 24px">
				<h2 class="section-title">With vs Without CRUD Service</h2>
				<div class="panel-glow comparison-table-wrapper">
					<table class="comparison-table">
						<thead>
							<tr>
								<th>Aspect</th>
								<th>Without CRUD Service</th>
								<th>With CRUD Service</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>Time to integrate</td>
								<td>~6 weeks per API integration</td>
								<td><strong>~5 minutes</strong> from API to tool</td>
							</tr>
							<tr>
								<td>Development approach</td>
								<td>Custom code, per platform</td>
								<td><strong>No code</strong>, publish once</td>
							</tr>
							<tr>
								<td>Platform support</td>
								<td>One stack at a time</td>
								<td><strong>MCP, Copilot, OpenAI Functions</strong></td>
							</tr>
							<tr>
								<td>Governance</td>
								<td>Unclear guardrails</td>
								<td><strong>Schema pins + policy hooks built‑in</strong></td>
							</tr>
						</tbody>
					</table>
				</div>
			</section>
			<div class="section-divider"></div>
			<section id="crud-proof-links" class="container reveal-on-scroll" style="padding:8px 0 24px">
				<h2 class="section-title">Proof</h2>
				<div class="glass-card" style="padding:20px">
					<div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:16px">
						<a data-ev="proof_click" data-label="quickstart" href={`https://empowerid.github.io/empowernow_docs/docs/services/crud-service/how-to/mcp-quickstart/`} class="glass-card hover-rise" style="padding:16px;display:flex;gap:12px;align-items:center;text-decoration:none;border:1px solid rgba(182,255,60,.2)">
							<img src={`${import.meta.env.BASE_URL}images/icons/icon-rocket.png`} alt="" style="width:40px;height:40px;flex-shrink:0" />
							<div>
								<div style="color:#e8ecff;font-weight:500;font-size:14px">Idempotency quickstart</div>
								<div style="color:#9ba3b7;font-size:13px">→</div>
							</div>
						</a>
						<a data-ev="proof_click" data-label="approvals" href={`https://empowerid.github.io/empowernow_docs/docs/services/crud-service/explanation/approvals-overview/`} class="glass-card hover-rise" style="padding:16px;display:flex;gap:12px;align-items:center;text-decoration:none;border:1px solid rgba(182,255,60,.2)">
							<img src={`${import.meta.env.BASE_URL}images/icons/icon-clipboard-path.png`} alt="" style="width:40px;height:40px;flex-shrink:0" />
							<div>
								<div style="color:#e8ecff;font-weight:500;font-size:14px">Approval path options</div>
								<div style="color:#9ba3b7;font-size:13px">→</div>
							</div>
						</a>
						<a data-ev="artifact_view" data-label="receipt-min" href={`${import.meta.env.BASE_URL}resources/artifacts/receipt-min.json`} download class="glass-card hover-rise" style="padding:16px;display:flex;gap:12px;align-items:center;text-decoration:none;border:1px solid rgba(182,255,60,.2)">
							<img src={`${import.meta.env.BASE_URL}images/icons/icon-receipt.png`} alt="" style="width:40px;height:40px;flex-shrink:0" />
							<div>
								<div style="color:#e8ecff;font-weight:500;font-size:14px">Receipt sample (6 lines)</div>
								<div style="color:#9ba3b7;font-size:13px">↓</div>
							</div>
						</a>
					<button type="button" data-ev="proof_click" data-label="demo" onclick="document.getElementById('demo-video-trigger')?.click()" class="glass-card hover-rise" style="padding:16px;display:flex;gap:12px;align-items:center;text-decoration:none;border:1px solid rgba(182,255,60,.2);background:transparent;cursor:pointer;width:100%">
						<img src={`${import.meta.env.BASE_URL}images/icons/icon-eye-crosshair.png`} alt="" style="width:40px;height:40px;flex-shrink:0" />
						<div>
							<div style="color:#e8ecff;font-weight:500;font-size:14px">Watch 90‑sec demo</div>
							<div style="color:#9ba3b7;font-size:13px">→</div>
						</div>
					</button>
					</div>
				</div>
			</section>
			<div class="section-divider"></div>
			<section class="container reveal-on-scroll" id="crud-shots" style="padding:8px 0 24px">
				<h2 class="section-title">Visual workflows</h2>
				<div class="grid-2" style="display:grid;grid-template-columns:1fr 1fr;gap:20px">
					<div class="glass-card hover-rise" style="padding:12px;min-height:200px" aria-label="Visual workflow designer">
						<div style="position:relative;overflow:hidden;border-radius:8px">
							<img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/workflow_designfull.png`} alt="Visual workflow designer showing nodes and edges" width="720" height="405" loading="lazy" style="display:block;width:100%;height:auto;border-radius:8px;cursor:zoom-in;transition:transform 0.3s ease" />
						</div>
					</div>
					<div class="glass-card hover-rise" style="padding:12px;min-height:200px" aria-label="Workflow catalog">
						<div style="position:relative;overflow:hidden;border-radius:8px">
							<img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/workflow_list.png`} alt="Workflows catalog grid" width="720" height="405" loading="lazy" style="display:block;width:100%;height:auto;border-radius:8px;cursor:zoom-in;transition:transform 0.3s ease" />
						</div>
					</div>
				</div>
			</section>
			<!-- Lightbox modal for maximizing images -->
			<div id="img-lightbox" hidden role="dialog" aria-modal="true" aria-labelledby="img-lightbox-title" style="position:fixed;inset:0;background:rgba(0,0,0,.75);align-items:center;justify-content:center;z-index:9999;padding:20px">
				<div style="position:relative;max-width:min(1200px,90vw);max-height:90vh;outline:none">
					<h2 id="img-lightbox-title" style="position:absolute;left:-9999px;top:auto;width:1px;height:1px;overflow:hidden">Image preview</h2>
					<img id="img-lightbox-img" alt="" style="display:block;max-width:100%;max-height:90vh;border-radius:12px;box-shadow:0 10px 30px rgba(0,0,0,.5)" />
					<button id="img-lightbox-close" aria-label="Close" style="position:absolute;top:6px;right:6px;background:rgba(0,0,0,.6);color:#fff;border:none;border-radius:8px;padding:6px 10px;cursor:pointer">✕</button>
				</div>
			</div>
		</fragment>
	</Product>
	<style>
		.hover-rise:hover img {
			transform: scale(1.02);
		}
	</style>
	<script>
		(function(){
			try{
				(window).dataLayer=(window).dataLayer||[];
				// Reveal on scroll
				if('IntersectionObserver' in window){
					const els=[...document.querySelectorAll('.reveal-on-scroll')];
					const io=new IntersectionObserver((entries)=>{
						entries.forEach(e=>{ if(e.isIntersecting){ (e.target as HTMLElement).classList.add('is-visible'); io.unobserve(e.target); } });
					},{threshold:.25});
					els.forEach(el=> io.observe(el));
				}
				// Track views of product shots placeholders
				const shots=document.getElementById('crud-shots');
				if(shots && 'IntersectionObserver' in window){
					const io=new IntersectionObserver((entries)=>{
						entries.forEach(e=>{ if(e.isIntersecting){ (window).dataLayer.push({event:'section_view', section:'crud_shots'}); io.disconnect(); } });
					},{threshold:.5});
					io.observe(shots);
				}
				// Simple lightbox for images
				const lb=document.getElementById('img-lightbox');
				const lbImg=document.getElementById('img-lightbox-img');
				const lbClose=document.getElementById('img-lightbox-close');
				let lastFocus: HTMLElement | null = null;
				function hideLb(){ if(lb){ lb.hidden=true; lb.style.display='none'; lb.setAttribute('aria-hidden','true'); lastFocus?.focus(); } }
				function showLb(src){ if(lb && lbImg){ lastFocus = (document.activeElement as HTMLElement) || null; lbImg.src=src; lb.hidden=false; lb.style.display='flex'; lb.removeAttribute('aria-hidden'); (lb.querySelector('#img-lightbox-close') as HTMLElement)?.focus(); } }
				document.querySelectorAll('img.enlargeable')?.forEach((img)=>{
					img.addEventListener('click',()=>{
						showLb((img as HTMLImageElement).src);
						(window).dataLayer.push({event:'image_maximize', src: (img as HTMLImageElement).src});
					});
				});
				lbClose?.addEventListener('click',hideLb);
				lb?.addEventListener('click',(e)=>{ if(e.target===lb){ hideLb(); } });
				document.addEventListener('keydown',(e)=>{ if(!lb?.hidden && e.key==='Escape'){ hideLb(); } });
				// Delegate clicks for data-ev anchors/placeholders
				document.addEventListener('click',(e)=>{
					const t=(e.target as HTMLElement)?.closest('[data-ev]') as HTMLElement|null;
					if(t){ (window).dataLayer.push({event: t.getAttribute('data-ev'), label: t.getAttribute('data-label')||''}); }
				});
			}catch{}
		})();
	</script>

	<!-- Hidden video for lightbox -->
	<div style="position:fixed;left:-9999px;top:-9999px;width:1px;height:1px;overflow:hidden;pointer-events:none" id="demo-video-wrapper">
		<MediaVideo 
			src={{mp4:`${import.meta.env.BASE_URL}videos/homepage/The_AI_Gold_Rush.mp4`}}
			poster={`${import.meta.env.BASE_URL}images/video-placeholder/hero-video-placeholder.jpg`}
			title="The AI Gold Rush: EmpowerNow 90-second demo"
			mode="modal"
			autoPlay={true}
			muted={false}
			aspect="16/9"
		/>
	</div>
	<script>
		// Add ID to video trigger button for CTA access
		(function() {
			const wrapper = document.getElementById('demo-video-wrapper');
			if (wrapper) {
				const videoBtn = wrapper.querySelector('.mv-defer');
				if (videoBtn) {
					videoBtn.id = 'demo-video-trigger';
				}
			}
		})();
	</script>

	</Base>
