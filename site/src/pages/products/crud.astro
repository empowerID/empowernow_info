---
import Base from '../../layouts/Base.astro';
import Product from '../../layouts/Product.astro';
import JsonLd from '../../components/JsonLd.astro';
const title = 'CRUD Service | EmpowerNow';
const description = 'Turn any API/workflow/DB into a governed MCP tool — no code. Secure by design; pre‑approved actions; reusable across agents.';
const canonical = '/products/crud/';
const jsonLdProduct = {"@context":"https://schema.org","@type":"Product","name":"CRUD Service","brand":{"@type":"Brand","name":"EmpowerNow"},"description":description,"url":new URL(canonical, Astro.site),"category":"Workflow Automation","audience":{"@type":"Audience","audienceType":"Enterprise IAM, Platform Engineering, DevOps, App Teams, Security"},"offers":{"@type":"Offer","priceCurrency":"USD","price":"500","priceSpecification":{"@type":"UnitPriceSpecification","price":"500","priceCurrency":"USD","unitText":"governed endpoint / month"}}};
---
<Base title={title} description={description} canonical={canonical}>
	<JsonLd data={jsonLdProduct} />
	<Product
		title={title}
		description={description}
		canonical={canonical}
		productKey="crud"
		productIcon="⚙️"
		eyebrow="⚙️ CRUD SERVICE"
		headline="CRUD Service"
		subhead="No‑code connectors and visual workflows. Publish tools/resources to MCP, Functions, and Microsoft Copilot."
		targetICP={[ 'Platform Engineering', 'DevOps', 'App Teams', 'Security' ]}
		keyBenefits={[
			'No‑code connectors for APIs/DBs with policy hooks',
			'Visual graph workflows with approvals and SLOs',
			'Publish tools/resources to MCP, Microsoft Copilot, Functions',
			'Governed execution: schema pins, idempotency, retries',
			'Cryptographic receipts and audit built‑in'
		]}
		primaryCTA={{ label: 'Quickstart', href: `https://empowerid.github.io/empowernow_docs/docs/services/crud-service/how-to/mcp-quickstart/` }}
		secondaryCTA={{ label: 'Book demo', href: `${import.meta.env.BASE_URL}demo/` }}
		tertiaryCTA={{ label: 'Read docs', href: 'https://empowerid.github.io/empowernow_docs/docs/services/crud-service/' }}
		docsLinks={[
			{ href: 'https://empowerid.github.io/empowernow_docs/docs/services/crud-service/', label: 'CRUD Service Docs' },
			{ href: 'https://empowerid.github.io/empowernow_docs/docs/services/crud-service/explanation/idempotency/', label: 'Idempotency' },
			{ href: 'https://empowerid.github.io/empowernow_docs/docs/services/crud-service/explanation/approvals-overview/', label: 'Approvals' }
		]}
		wwwLinks={[ { href: '/solutions/delegated-authorization/', label: 'Delegated Authorization' } ]}
		keywords={[ 'mcp','openai functions','copilot','idempotency' ]}
	>
		<fragment slot="cta-after">
			<div style="margin-top:12px"><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}resources/strategy/ai-middleware-leadership/`}>Read the Strategy Memo →</a></div>
		</fragment>
		<fragment slot="standards">
			<div class="status-row">
				<span class="chip chip--outline-cyan">MCP</span>
				<span class="chip chip--outline-cyan">OpenAI Functions</span>
				<span class="chip chip--outline-cyan">Microsoft Copilot</span>
			</div>
		</fragment>
		<fragment slot="examples">
			<div class="card-grid">
				<div class="ns-card"><h3>Create Contractor (Entra)</h3><p>Form + approval + retry.</p></div>
				<div class="ns-card"><h3>Provision Repo (GitHub)</h3><p>Schema-pinned; egress allowlist.</p></div>
			</div>
		</fragment>
		<fragment slot="how">
			<section class="container" id="crud-no-code" style="padding:8px 0 24px">
				<h2 class="section-title">How it works</h2>
				<ol class="numbered">
					<li>Receive operation → dedupe by <code>event_id</code> → persist.</li>
					<li>Orchestrate approvals and execute with retries/SLOs.</li>
					<li>Emit events and signed receipts; stream to analytics.</li>
				</ol>
			</section>
			<section class="container" id="crud-publish-many" style="padding:8px 0 24px">
				<h2 class="section-title">No‑code connectors</h2>
				<p style="color:#9ba3b7">Connect Entra/Okta/AD/ServiceNow/Salesforce/SAP and custom APIs in minutes — no code. Author parameters once; enforce policy hooks everywhere.</p>
				<div style="display:flex;gap:8px;flex-wrap:wrap;align-items:center"><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}resources/research/`}>Adapter catalog</a><img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/systemdefinitions_list.png`} alt="Catalog of configured systems" width="360" height="202" loading="lazy" style="border-radius:10px;border:1px solid var(--border-soft);cursor:zoom-in" /><img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/systemdefinitions_fieldglass_designer.png`} alt="No‑code connector designer listing API commands" width="360" height="202" loading="lazy" style="border-radius:10px;border:1px solid var(--border-soft);cursor:zoom-in" /></div>
			</section>
			<section class="container" id="crud-compare" style="padding:8px 0 24px">
				<h2 class="section-title">Author once → publish many</h2>
				<p style="color:#9ba3b7">Turn any API/DB into agent‑safe tools and resources; publish across platforms with policy hooks: Anthropic MCP, OpenAI Functions, Microsoft Copilot, Google Vertex, AWS Bedrock, LangChain/LangGraph.</p>
				<div style="margin-top:8px"><img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/mcp_prompts.png`} alt="MCP prompts catalog with tags" width="520" height="292" loading="lazy" style="border-radius:10px;border:1px solid var(--border-soft);cursor:zoom-in" /></div>
			</section>
			<section class="container" id="crud-positioning" style="padding:8px 0 24px">
				<h2 class="section-title">How we compare to general automation platforms</h2>
				<div class="grid-2" style="display:grid;grid-template-columns:1fr 1fr;gap:12px">
					<div class="block-ghost">
						<div class="meta">General automation platforms</div>
						<ul style="color:#9ba3b7;line-height:1.7;margin:6px 0 0;padding-left:18px">
							<li>Breadth of SaaS connectors and templates</li>
							<li>Great for quick, citizen‑developer automation</li>
							<li>Light policy and audit by default</li>
						</ul>
					</div>
					<div class="panel-glass" style="padding:10px">
						<div class="meta">CRUD Service</div>
						<ul style="color:#9ba3b7;line-height:1.7;margin:6px 0 0;padding-left:18px">
							<li>Enterprise IAM depth: approvals, policy, receipts</li>
							<li>Visual workflows + no‑code connectors</li>
							<li>Publish as MCP tools/resources across runtimes</li>
						</ul>
					</div>
				</div>
				<div style="display:flex;gap:8px;flex-wrap:wrap;margin-top:10px"><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}solutions/delegated-authorization/`}>Reference architecture</a><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}resources/research/`}>Adapter catalog</a></div>
			</section>
			<section class="container" id="crud-proof" style="padding:8px 0 24px">
				<h2 class="section-title">With vs Without CRUD Service</h2>
				<div class="grid-2" style="display:grid;grid-template-columns:1fr 1fr;gap:12px">
					<div class="block-ghost">
						<div class="meta">Without CRUD Service</div>
						<ul style="color:#9ba3b7;line-height:1.7;margin:6px 0 0;padding-left:18px">
							<li>~6 weeks per API integration</li>
							<li>Custom code, per platform</li>
							<li>One stack at a time</li>
							<li>Unclear guardrails</li>
						</ul>
					</div>
					<div class="panel-glass" style="padding:10px">
						<div class="meta">With CRUD Service</div>
						<ul style="color:#9ba3b7;line-height:1.7;margin:6px 0 0;padding-left:18px">
							<li><strong>~5 minutes</strong> from API to tool</li>
							<li><strong>No code</strong>, publish once</li>
							<li><strong>MCP, Copilot, OpenAI Functions</strong></li>
							<li><strong>Schema pins + policy hooks built‑in</strong></li>
						</ul>
					</div>
				</div>
			</section>
			<section class="container" style="padding:8px 0 24px">
				<h2 class="section-title">Proof</h2>
				<ul style="color:#9ba3b7;line-height:1.8">
					<li><a data-ev="proof_click" data-label="quickstart" href={`https://empowerid.github.io/empowernow_docs/docs/services/crud-service/how-to/mcp-quickstart/`}>Idempotency quickstart</a></li>
					<li><a data-ev="proof_click" data-label="approvals" href={`https://empowerid.github.io/empowernow_docs/docs/services/crud-service/explanation/approvals-overview/`}>Approval path options</a></li>
					<li><a data-ev="artifact_view" data-label="receipt-min" href={`${import.meta.env.BASE_URL}resources/artifacts/receipt-min.json`} download>Receipt sample (6 lines)</a></li>
					<li><a data-ev="proof_click" data-label="demo" href={`${import.meta.env.BASE_URL}resources/demo/`}>Watch 90‑sec demo</a></li>
				</ul>
			</section>
			<section class="container" id="crud-shots" style="padding:8px 0 24px">
				<h2 class="section-title">Visual workflows</h2>
				<div class="grid-2" style="display:grid;grid-template-columns:1fr 1fr;gap:12px">
					<div class="glass-card" style="padding:8px;min-height:200px" aria-label="Visual workflow designer">
						<img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/workflow_designfull.png`} alt="Visual workflow designer showing nodes and edges" width="720" height="405" loading="lazy" style="display:block;width:100%;height:auto;border-radius:8px;cursor:zoom-in" />
					</div>
					<div class="glass-card" style="padding:8px;min-height:200px" aria-label="Workflow catalog">
						<img class="enlargeable" src={`${import.meta.env.BASE_URL}images/products/crud/workflow_list.png`} alt="Workflows catalog grid" width="720" height="405" loading="lazy" style="display:block;width:100%;height:auto;border-radius:8px;cursor:zoom-in" />
					</div>
				</div>
			</section>
			<!-- Lightbox modal for maximizing images -->
			<div id="img-lightbox" hidden role="dialog" aria-modal="true" aria-labelledby="img-lightbox-title" style="position:fixed;inset:0;background:rgba(0,0,0,.75);align-items:center;justify-content:center;z-index:9999;padding:20px">
				<div style="position:relative;max-width:min(1200px,90vw);max-height:90vh;outline:none">
					<h2 id="img-lightbox-title" style="position:absolute;left:-9999px;top:auto;width:1px;height:1px;overflow:hidden">Image preview</h2>
					<img id="img-lightbox-img" alt="" style="display:block;max-width:100%;max-height:90vh;border-radius:12px;box-shadow:0 10px 30px rgba(0,0,0,.5)" />
					<button id="img-lightbox-close" aria-label="Close" style="position:absolute;top:6px;right:6px;background:rgba(0,0,0,.6);color:#fff;border:none;border-radius:8px;padding:6px 10px;cursor:pointer">✕</button>
				</div>
			</div>
		</fragment>
	</Product>
	<script>
		(function(){
			try{
				(window).dataLayer=(window).dataLayer||[];
				// Track views of product shots placeholders
				const shots=document.getElementById('crud-shots');
				if(shots && 'IntersectionObserver' in window){
					const io=new IntersectionObserver((entries)=>{
						entries.forEach(e=>{ if(e.isIntersecting){ (window).dataLayer.push({event:'section_view', section:'crud_shots'}); io.disconnect(); } });
					},{threshold:.5});
					io.observe(shots);
				}
				// Simple lightbox for images
				const lb=document.getElementById('img-lightbox');
				const lbImg=document.getElementById('img-lightbox-img');
				const lbClose=document.getElementById('img-lightbox-close');
				let lastFocus: HTMLElement | null = null;
				function hideLb(){ if(lb){ lb.hidden=true; lb.style.display='none'; lb.setAttribute('aria-hidden','true'); lastFocus?.focus(); } }
				function showLb(src){ if(lb && lbImg){ lastFocus = (document.activeElement as HTMLElement) || null; lbImg.src=src; lb.hidden=false; lb.style.display='flex'; lb.removeAttribute('aria-hidden'); (lb.querySelector('#img-lightbox-close') as HTMLElement)?.focus(); } }
				document.querySelectorAll('img.enlargeable')?.forEach((img)=>{
					img.addEventListener('click',()=>{
						showLb((img as HTMLImageElement).src);
						(window).dataLayer.push({event:'image_maximize', src: (img as HTMLImageElement).src});
					});
				});
				lbClose?.addEventListener('click',hideLb);
				lb?.addEventListener('click',(e)=>{ if(e.target===lb){ hideLb(); } });
				document.addEventListener('keydown',(e)=>{ if(!lb?.hidden && e.key==='Escape'){ hideLb(); } });
				// Delegate clicks for data-ev anchors/placeholders
				document.addEventListener('click',(e)=>{
					const t=(e.target as HTMLElement)?.closest('[data-ev]') as HTMLElement|null;
					if(t){ (window).dataLayer.push({event: t.getAttribute('data-ev'), label: t.getAttribute('data-label')||''}); }
				});
			}catch{}
		})();
	</script>
	</Base>
