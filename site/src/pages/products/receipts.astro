---
import Base from '../../layouts/Base.astro';
import Product from '../../layouts/Product.astro';
import JsonLd from '../../components/JsonLd.astro';
const title = 'Receipt Vault — Tamper‑Evident Audit';
const description = 'Prove every action: cryptographic receipts with decision context, policy hash, schema hash, and spend — financial‑grade audit.';
const canonical = '/products/receipts/';
const jsonLdProduct = {"@context":"https://schema.org","@type":"Product","name":"Receipt Vault","brand":{"@type":"Brand","name":"EmpowerNow"},"description":description,"url":new URL(canonical, Astro.site)};
---
<Base title={title} description={description} canonical={canonical}>
	<JsonLd data={jsonLdProduct} />
	<Product title={title} description={description} canonical={canonical} headline="Prove every action" subhead="Financial‑grade, cryptographic receipts for every governed decision and spend." targetICP={[ 'Security', 'Compliance', 'Platform Teams' ]} keyBenefits={[ 'Tamper‑evident, hash‑chained receipts', 'Decision context + policy hash + schema hash', 'Spend attribution and independent verification' ]} primaryCTA={{ label: 'Book demo', href: `${import.meta.env.BASE_URL}demo/` }} wwwLinks={[ { href: '/solutions/ai-agent-governance/', label: 'AI Agent Governance' } ]} keywords={[ 'authzen','audit' ]}>
		<fragment slot="cta-after">
			<div style="margin-top:12px"><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}resources/strategy/ai-middleware-leadership/`}>Read the Strategy Memo →</a></div>
		</fragment>
		<fragment slot="how">
			<section class="container" style="padding:8px 0 24px">
				<h2 class="section-title">How it works</h2>
				<p style="color:#9ba3b7">Each high‑value action emits a signed receipt that includes subject, action, resource, and policy context. Receipts are hash‑chained for integrity.</p>
			</section>
		</fragment>
	</Product>
</Base>
