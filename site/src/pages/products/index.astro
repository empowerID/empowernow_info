---
import Base from '../../layouts/Base.astro';
const title = 'Products — EmpowerNow';
const description = 'IdP, PDP, ARIA MCP Gateway, ARIA Shield, Data Collector, CRUD Service. Bundled: Tool Registry, Receipt Vault, Membership.';
const canonical = '/products/';
---
<Base title={title} description={description} canonical={canonical}>
    <section class="hero-plate page-stage" style="padding:120px 0 64px">
        <div class="container" style="display:flex;gap:28px;align-items:center;flex-wrap:wrap">
            <div style="flex:1 1 520px;min-width:300px">
                <h1 class="display" style="margin:0 0 8px">The Platform That Makes AI Agents Actually Work</h1>
                <p style="color:#9ba3b7;max-width:70ch;margin:12px 0 18px">Turn any API into a <strong>secure agent tool</strong> in <strong>5 minutes</strong>. Then enforce policy and prove every action.</p>
                <div style="display:flex;gap:12px;flex-wrap:wrap">
                    <a href={`${import.meta.env.BASE_URL}docs/crud-service/quickstart`} class="btn btn-primary" data-ev="cta_click" data-label="products-hero-quickstart">Start Quickstart</a>
                    <a href={`${import.meta.env.BASE_URL}resources/demo/`} class="btn" data-ev="cta_click" data-label="products-hero-demo">Watch 90‑sec demo</a>
                </div>
            </div>
            <div style="flex:1 1 380px;min-width:280px"><div style="color:#9ba3b7">API → CRUD Service → MCP/Copilot/Functions</div></div>
        </div>
    </section>
    <section class="container" style="padding:64px 0">
        <div class="glass-card" style="padding:8px;display:flex;gap:8px;flex-wrap:wrap;align-items:center;margin:12px 0" role="tablist" aria-label="Products categories">
            <button class="btn" role="tab" id="tab-build" aria-controls="panel-build" aria-selected="true" data-tab="build">Build</button>
            <button class="btn" role="tab" id="tab-secure" aria-controls="panel-secure" aria-selected="false" data-tab="secure">Secure</button>
            <button class="btn" role="tab" id="tab-audit" aria-controls="panel-audit" aria-selected="false" data-tab="audit">Audit</button>
            <button class="btn" role="tab" id="tab-all" aria-controls="panel-all" aria-selected="false" data-tab="all">All Products</button>
        </div>
    </section>
    <section class="container" style="padding:64px 0">
        <div class="grid-3" id="panel-build" role="tabpanel" aria-labelledby="tab-build">
            <div class="panel-glow" data-cat="build" style="padding:16px; grid-column: span 2">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">CRUD Service</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Turn any API/DB into agent‑safe tools (schema pins + policy hooks). Publish once to MCP / Copilot / OpenAI Functions.</div>
                <div id="products-crud-compare" style="display:grid;grid-template-columns:1fr 1fr;gap:12px;margin-top:8px">
                    <div class="block-ghost">
                        <div class="meta">Without CRUD Service</div>
                        <ul style="color:#9ba3b7;line-height:1.7;margin:6px 0 0;padding-left:18px">
                            <li>~6 weeks per API integration</li>
                            <li>Custom code, per platform</li>
                            <li>One stack at a time</li>
                            <li>Unclear guardrails</li>
                        </ul>
                    </div>
                    <div class="panel-glass" style="padding:10px">
                        <div class="meta">With CRUD Service</div>
                        <ul style="color:#9ba3b7;line-height:1.7;margin:6px 0 0;padding-left:18px">
                            <li><strong>~5 minutes</strong> from API to tool</li>
                            <li><strong>No code</strong>, publish once</li>
                            <li><strong>MCP, Copilot, OpenAI Functions</strong></li>
                            <li><strong>Schema pins + policy hooks built‑in</strong></li>
                        </ul>
                    </div>
                </div>
                <div style="margin-top:8px;color:#9ba3b7;font-size:.85rem">Times are representative; shown live in demo.</div>
                <div style="display:flex;gap:8px;flex-wrap:wrap;margin-top:10px"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}docs/crud-service/quickstart`}>Quickstart</a><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}resources/research/`}>Adapter catalog</a></div>
            </div>
            <div class="glass-card" data-cat="secure" style="padding:16px" id="panel-secure" role="tabpanel" aria-labelledby="tab-secure" hidden>
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">ARIA Shield</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Application‑aware BFF for AI agents</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Stop data exfiltration & cap AI spend (402); params/egress allow‑lists</li>
                    <li><strong>Buyer:</strong> CISO / SecOps</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn" href={`${import.meta.env.BASE_URL}products/aria-shield/`}>Book Demo</a><a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/aria-shield/" target="_blank" rel="noopener">Docs ↗</a></div>
            </div>
            <div class="glass-card" data-cat="secure" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">MCP Gateway</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Cross‑platform policy gate (Anthropic MCP)</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Block prompt‑injection/tool overreach pre‑execution; validate plan & schema pins</li>
                    <li><strong>Buyer:</strong> AI Platform / AppSec</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn" href={`${import.meta.env.BASE_URL}products/gateway/`}>Quickstart</a><a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/mcp-gateway/" target="_blank" rel="noopener">Docs ↗</a></div>
            </div>
            <div class="glass-card" data-cat="secure" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">AuthZEN PDP</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Decisions in milliseconds (OpenID AuthZEN)</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Standardized decisions + constraints/obligations + TTL → consistent enforcement across agents</li>
                    <li><strong>Buyer:</strong> IAM / Identity Architecture</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn" href={`${import.meta.env.BASE_URL}products/pdp/`}>Open Reference</a><a class="btn" href="https://openid.net/wg/azn/" target="_blank" rel="noopener">AuthZEN ↗</a></div>
            </div>
            <div class="glass-card" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">IdP</h3><span class="chip chip--success">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Agent Passports & Consent</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Scoped, least‑privilege tokens and on‑behalf‑of flows — no long‑lived secrets</li>
                    <li><strong>Buyer:</strong> IAM / AppSec</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn" href={`${import.meta.env.BASE_URL}products/idp/`}>Open Docs</a></div>
            </div>
            <div id="vds" class="glass-card" data-cat="build" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">VDS (Virtual Directory Server)</h3><span class="chip" data-badge-info="Coming soon">Coming soon</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Directory abstraction for IGA scenarios</div>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn" href={`${import.meta.env.BASE_URL}contact/`}>Join waitlist</a></div>
            </div>
            <div class="glass-card" data-cat="audit" style="padding:16px" id="panel-audit" role="tabpanel" aria-labelledby="tab-audit" hidden>
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">Data Collector</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Spend & usage with receipts</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Per‑call cost & receipts for audit/FinOps — attribute dollars to policy, user, and tool</li>
                    <li><strong>Buyer:</strong> FinOps / Audit</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn" href={`${import.meta.env.BASE_URL}products/data-collector/`}>View Receipts</a></div>
            </div>
            <div class="glass-card" data-cat="audit" style="padding:16px" id="panel-all" role="tabpanel" aria-labelledby="tab-all" hidden>
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">Receipt Vault</h3></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Proof / non‑repudiation (hash‑chained receipts)</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Verifiable evidence: decision, policy hash, schema pin, cost</li>
                    <li><strong>Buyer:</strong> Audit / Compliance</li>
                </ul>
                <div style="opacity:.8;margin-bottom:6px">Receipt sample (6 lines)</div>
                <pre id="receipt-sample" class="glass-card" style="padding:12px;overflow:auto"><code>{`
{ "decision_id":"d-9f2",
  "policy_hash":"…a1c",
  "tool_schema_hash":"…7b9",
  "cost_usd":0.012,
  "ttl_ms":5000 }
`}</code></pre>
                <div style="opacity:.7;margin-top:8px;font-size:14px">Label: <em>Test Environment — Production Format</em></div>
                <div style="display:flex;gap:8px;flex-wrap:wrap;margin-top:10px">
                    <a class="btn" href={`${import.meta.env.BASE_URL}products/receipts/`}>Open Receipt Vault</a>
                    <a class="btn" data-ev="artifact_view" data-label="receipt-min" href={`${import.meta.env.BASE_URL}resources/artifacts/receipt-min.json`} download>Download sample</a>
                </div>
            </div>
        </div>
    </section>
    <script>
        (function(){
            try{
                const def=(location.hash?location.hash.substring(1):'build').toLowerCase();
                const buttons=[...document.querySelectorAll('button[role="tab"][data-tab]')];
                const panels={
                    build: document.getElementById('panel-build'),
                    secure: document.getElementById('panel-secure'),
                    audit: document.getElementById('panel-audit'),
                    all: document.getElementById('panel-all'),
                } as Record<string, HTMLElement|null>;
                function setTab(tab){
                    buttons.forEach(b=>{
                        const selected = b.getAttribute('data-tab')===tab;
                        b.setAttribute('aria-selected', String(selected));
                        b.tabIndex = selected ? 0 : -1 as any;
                        if(selected){ b.classList.add('tab-active'); } else { b.classList.remove('tab-active'); }
                    });
                    Object.entries(panels).forEach(([key,p])=>{
                        if(!p) return;
                        if(key===tab){ p.hidden=false; } else { p.hidden=true; }
                    });
                    (window).dataLayer=(window).dataLayer||[];
                    (window).dataLayer.push({event:'tab_select', tab});
                    history.replaceState(null, '', '#'+tab);
                    if(tab==='build'){
                        const crud = document.querySelector('[data-cat="build"]');
                        if(crud){ crud.scrollIntoView({behavior:'smooth', block:'start'}); }
                    }
                }
                buttons.forEach(b=> b.addEventListener('click', ()=>{ const t=b.getAttribute('data-tab'); if(t){ setTab(t); } }));
                // Keyboard navigation for tabs
                document.querySelector('[role="tablist"]').addEventListener('keydown', (e)=>{
                    const order=['build','secure','audit','all'];
                    const current = (document.activeElement as HTMLElement)?.getAttribute('data-tab')||'build';
                    let idx = order.indexOf(current);
                    if(e.key==='ArrowRight'){ idx=(idx+1)%order.length; setTab(order[idx]); (document.getElementById('tab-'+order[idx]) as HTMLElement)?.focus(); e.preventDefault(); }
                    if(e.key==='ArrowLeft'){ idx=(idx-1+order.length)%order.length; setTab(order[idx]); (document.getElementById('tab-'+order[idx]) as HTMLElement)?.focus(); e.preventDefault(); }
                    if(e.key==='Home'){ setTab(order[0]); (document.getElementById('tab-'+order[0]) as HTMLElement)?.focus(); e.preventDefault(); }
                    if(e.key==='End'){ setTab(order[order.length-1]); (document.getElementById('tab-'+order[order.length-1]) as HTMLElement)?.focus(); e.preventDefault(); }
                });
                window.addEventListener('hashchange', ()=>{ const h=(location.hash||'#build').substring(1); setTab(h); });
                setTab(def);
            }catch{}
        })();
    </script>
    <section class="container" data-section="control" style="padding:8px 0 16px">
        <div class="panel-glass" style="padding:16px">
            <h2 class="section-title" style="margin-top:0">Complete Control Stack</h2>
            <div aria-hidden="true" class="section-rail" style="margin:-2px 0 10px"></div>
            <ul style="color:#9ba3b7;line-height:1.8;margin:0 0 10px;padding-left:18px">
                <li><strong>Pre‑execution (MCP Gateway)</strong> <span class="badge badge--ga">GA</span>: validate <em>plan & schema pins</em>; block off‑policy <em>before</em> models run.</li>
                <li><strong>Authorization (AuthZEN PDP)</strong> <span class="badge badge--ga">GA</span>: standardized <em>who/what/for whom/constraints</em> (+ obligations/TTL).</li>
                <li><strong>Runtime (ARIA Shield)</strong> <span class="badge badge--beta">Beta</span>: <em>budgets (HTTP 402)</em>, parameter allow‑lists, egress filters; cost attribution.</li>
            </ul>
            <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}solutions/agent-safe-tools/`}>Security brief</a><a class="btn btn-ghost" href={`${import.meta.env.BASE_URL}solutions/delegated-authorization/`}>Reference architecture</a></div>
        </div>
    </section>
    <section class="container" id="products-status" data-section="status" style="padding:64px 0">
        <h2 class="section-title">Status</h2>
        <div class="block-ghost" style="padding-top:12px;display:flex;gap:12px;flex-wrap:wrap;color:#9ba3b7">
            <span class="pill" style="border:1px solid var(--border-soft);padding:4px 10px;border-radius:999px">Platform: <strong>LIVE</strong></span>
            <span class="pill" style="border:1px solid var(--border-soft);padding:4px 10px;border-radius:999px">Demo: <strong>ACTIVE</strong></span>
            <span class="pill" style="border:1px solid var(--border-soft);padding:4px 10px;border-radius:999px">Create first tool: <strong>&lt; 5 MIN</strong></span>
            <span class="pill" style="border:1px solid var(--border-soft);padding:4px 10px;border-radius:999px">Docs: <strong>COMPLETE</strong></span>
        </div>
    </section>
    <section class="container" style="padding:64px 0">
        <h2 class="section-title">Works with</h2>
        <div class="chip-row" style="display:flex;gap:8px;flex-wrap:wrap;color:#9ba3b7">
            <span class="chip">Anthropic MCP</span><span class="chip">Microsoft Copilot</span><span class="chip">OpenAI Functions</span><span class="chip">Google Vertex (Q1)</span><span class="chip">AWS Bedrock (Q1)</span><span class="chip">LangChain/LangGraph</span>
        </div>
    </section>
    <section class="container" style="padding:64px 0">
        <h2 class="section-title">Included by tier</h2>
        <div class="glass-card" style="padding:16px">
            <div style="display:grid;grid-template-columns:180px repeat(3,140px);gap:8px;align-items:center">
                <div></div><div><strong>Starter</strong></div><div><strong>Pro</strong></div><div><strong>Enterprise</strong></div>
                <div>Tool Registry</div><div>✔</div><div>✔</div><div>✔</div>
                <div>MCP Gateway</div><div>✔</div><div>✔</div><div>✔</div>
                <div>CRUD Service</div><div>✔</div><div>✔</div><div>✔</div>
                <div>AuthZEN PDP (core)</div><div>✔</div><div>✔</div><div>✔</div>
                <div>ARIA Shield</div><div></div><div>✔</div><div>✔</div>
                <div>Receipt Vault</div><div></div><div>✔</div><div>✔</div>
                <div>Data Collector</div><div></div><div>✔</div><div>✔</div>
            </div>
        </div>
    </section>
    <section class="container" style="padding:64px 0">
        <h2 class="section-title">Pricing</h2>
        <div class="glass-card" style="padding:16px">
            <p style="color:#9ba3b7;margin:0 0 10px"><strong>Starting at $500 / governed endpoint / month</strong> · usage (decisions/receipts) · author seats</p>
            <div style="display:flex;gap:10px;flex-wrap:wrap"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}pricing/`}>Compare tiers</a><a class="btn" href={`${import.meta.env.BASE_URL}contact/`}>Contact sales</a><a class="btn" href={`${import.meta.env.BASE_URL}docs/self-host/`}>Self‑host install</a></div>
        </div>
    </section>
	<section class="container" style="padding:64px 0">
		<h2 class="section-title">Deep technical docs</h2>
		<div style="display:flex;gap:12px;flex-wrap:wrap">
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/bff/explanation/overview/">ARIA Shield Overview</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/aria-shield/">ARIA Shield Docs</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/pdp/">PDP Reference</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/mcp-gateway/">MCP Gateway Docs</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/idp/">IdP Docs</a>
		</div>
	</section>
    <style>
        /* Exclude buttons from generic link color to preserve button contrast */
        .container a:not(.btn):link, .container a:not(.btn):visited { color: var(--color-primary); text-decoration: none; }
        .container a:not(.btn):hover { text-decoration: underline; }
    </style>
    <script>
        (function(){
            try{
                (window).dataLayer=(window).dataLayer||[];
                // Status view analytics
                const status=document.getElementById('products-status');
                if(status && 'IntersectionObserver' in window){
                    const io=new IntersectionObserver((entries)=>{
                        entries.forEach(e=>{ if(e.isIntersecting){ (window).dataLayer.push({event:'status_view'}); io.disconnect(); } });
                    },{threshold:.5});
                    io.observe(status);
                }
                const sample=document.getElementById('receipt-sample');
                if(sample && 'IntersectionObserver' in window){
                    const io=new IntersectionObserver((entries)=>{
                        entries.forEach(e=>{ if(e.isIntersecting){ (window).dataLayer.push({event:'receipt_sample_view'}); io.disconnect(); } });
                    },{threshold:.6});
                    io.observe(sample);
                }
                const compare=document.querySelector('#products-crud-compare')||document.querySelector('div.glass-card h3:nth-child(1)');
                if(compare && 'IntersectionObserver' in window){
                    const io=new IntersectionObserver((entries)=>{
                        entries.forEach(e=>{ if(e.isIntersecting){ (window).dataLayer.push({event:'crud_compare_view'}); io.disconnect(); } });
                    },{threshold:.35});
                    io.observe(compare as Element);
                }
                const crudCard=document.querySelector('h3:contains("CRUDService")')?.parentElement?.parentElement;
                let t0=0; let sent=false;
                function onIn(){ if(!sent){ t0=performance.now(); } }
                function onOut(){ if(!sent && t0){ const ms=Math.round(performance.now()-t0); (window).dataLayer.push({event:'section_time', section:'crud_service', ms}); sent=true; } }
                if(crudCard && 'IntersectionObserver' in window){
                    const io2=new IntersectionObserver((entries)=>{ entries.forEach(e=> e.isIntersecting ? onIn() : onOut()); },{threshold:.6});
                    io2.observe(crudCard);
                }
                document.querySelectorAll('[data-badge-info]')?.forEach(el=>{
                    el.addEventListener('mouseenter', ()=>{ (window).dataLayer.push({event:'badge_info_open', badge: el.getAttribute('data-badge-info')}); });
                });
            }catch{}
        })();
    </script>

</Base>
