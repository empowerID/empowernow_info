---
import Base from '../../layouts/Base.astro';
import Hero from '../../components/Hero.astro';
const title = 'Products — EmpowerNow';
const description = 'IdP, PDP, ARIA MCP Gateway, ARIA Shield, Data Collector, CRUD Service. Bundled: Tool Registry, Receipt Vault, Membership.';
const canonical = '/products/';
---
<Base title={title} description={description} canonical={canonical}>
    <Hero
        headline="The Platform That Makes AI Agents Actually Work"
        body="Turn any API into a <strong>secure agent tool</strong> in <strong>5 minutes</strong>. Then enforce policy and prove every action."
        illustration="images/illustrations/large/products/hero-products-main.png"
        illustrationAlt="Visual representation of the unified EmpowerNow platform ecosystem showing interconnected products"
        illustrationWidth={800}
        illustrationHeight={600}
        showAAIcon={false}
    >
        <div slot="actions" class="hero__actions">
            <a href={`https://empowerid.github.io/empowernow_docs/docs/services/crud-service/how-to/mcp-quickstart/`} class="btn btn-primary" data-ev="cta_click" data-label="products-hero-quickstart">Start Quickstart</a>
            <a href={`${import.meta.env.BASE_URL}resources/demo/`} class="btn btn-ghost" data-ev="cta_click" data-label="products-hero-demo">Watch 90‑sec demo</a>
        </div>
    </Hero>
    <section class="container" style="padding:40px 0 16px">
        <div style="display:flex;gap:8px;flex-wrap:wrap;align-items:center;margin:0" role="tablist" aria-label="Products categories">
            <button class="btn" role="tab" id="tab-build" aria-controls="panel-build" aria-selected="true" data-tab="build">Build</button>
            <button class="btn" role="tab" id="tab-secure" aria-controls="panel-secure" aria-selected="false" data-tab="secure">Secure</button>
            <button class="btn" role="tab" id="tab-audit" aria-controls="panel-audit" aria-selected="false" data-tab="audit">Audit</button>
            <button class="btn" role="tab" id="tab-all" aria-controls="panel-all" aria-selected="false" data-tab="all">All Products</button>
        </div>
    </section>
    <section class="container" style="padding:16px 0 64px">
        <div class="grid-3" id="panel-build" role="tabpanel" aria-labelledby="tab-build">
            <div class="panel-glow" data-cat="build" style="padding:16px; grid-column: span 2">
                <div class="product-rail rail--crud" aria-hidden="true"></div>
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">CRUD Service</h3></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Turn any API/DB into agent‑safe tools (schema pins + policy hooks). Publish once to MCP / Microsoft Copilot / OpenAI Functions.</div>
