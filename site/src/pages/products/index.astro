---
import Base from '../../layouts/Base.astro';
const title = 'Products — EmpowerNow';
const description = 'IdP, PDP, ARIA MCP Gateway, ARIA Shield, Data Collector, CRUD Service. Bundled: Tool Registry, Receipt Vault, Membership.';
const canonical = '/products/';
---
<Base title={title} description={description} canonical={canonical}>
    <section class="container" style="padding:56px 0 16px">
        <h1 class="display">Products</h1>
        <div class="glass-card" style="padding:8px;display:flex;gap:8px;flex-wrap:wrap;align-items:center;margin:12px 0">
            <button class="btn" data-tab="build" aria-pressed="true">Build</button>
            <button class="btn" data-tab="secure">Secure</button>
            <button class="btn" data-tab="audit">Audit</button>
            <button class="btn" data-tab="all">All Products</button>
        </div>
        <div id="hero-a" aria-label="Hero Variant A" style="display:block">
            <p style="color:#9ba3b7;max-width:900px;margin:6px 0 12px"><strong>The Platform That Makes AI Agents Actually Work.</strong> Turn any API into a secure agent tool in <strong>5 minutes</strong>. Then <strong>enforce</strong> policy and <strong>prove</strong> every action.</p>
            <div style="display:flex;gap:10px;flex-wrap:wrap"><a class="btn btn-primary" data-ev="cta_click" data-label="products-quickstart" href={`${import.meta.env.BASE_URL}products/crud/`}>Start Quickstart</a><a class="btn" data-ev="cta_click" data-label="products-demo" href={`${import.meta.env.BASE_URL}resources/demo/`}>Watch 90‑sec demo</a></div>
        </div>
        <div id="hero-b" aria-label="Hero Variant B" style="display:none">
            <p style="color:#9ba3b7;max-width:900px;margin:6px 0 12px"><strong>Build Secure Agent Tools in 5 Minutes.</strong> <strong>Create</strong> tools fast. <strong>Control</strong> how they run. <strong>Prove</strong> every action with receipts.</p>
            <div style="display:flex;gap:10px;flex-wrap:wrap"><a class="btn btn-primary" data-ev="cta_click" data-label="products-quickstart-b" href={`${import.meta.env.BASE_URL}products/crud/`}>Start Quickstart</a><a class="btn" data-ev="cta_click" data-label="products-demo-b" href={`${import.meta.env.BASE_URL}resources/demo/`}>Watch 90‑sec demo</a></div>
        </div>
        <script>
            (function(){
                try{
                    const v=(new URLSearchParams(location.search).get('ab')||'A').toUpperCase();
                    const a=document.getElementById('hero-a');
                    const b=document.getElementById('hero-b');
                    if(v==='B'&&a&&b){ a.style.display='none'; b.style.display='block'; }
                    (window).dataLayer=(window).dataLayer||[];
                    (window).dataLayer.push({ event:'hero_variant_view', variant: v });
                }catch{}
            })();
        </script>
        <div style="color:#9ba3b7;margin-bottom:16px">
            Flow: <a class="chip" href={`${import.meta.env.BASE_URL}products/crud/`}>Design</a>
            <span>→</span>
            <a class="chip" href={`${import.meta.env.BASE_URL}products/pdp/`}>Decide</a>
            <span>→</span>
            <a class="chip" href={`${import.meta.env.BASE_URL}products/gateway/`}>Enforce</a>
            <span>→</span>
            <a class="chip" href={`${import.meta.env.BASE_URL}products/receipts/`}>Prove</a>
        </div>
        <div class="grid-3">
            <div class="glass-card" data-cat="secure" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">ARIA Shield</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Application‑aware BFF for AI agents</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Stop data exfiltration & cap AI spend (402); params/egress allow‑lists</li>
                    <li><strong>Buyer:</strong> CISO / SecOps</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}products/aria-shield/`}>Book Demo</a><a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/aria-shield/" target="_blank" rel="noopener">Docs ↗</a></div>
            </div>
            <div class="glass-card" data-cat="secure" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">MCP Gateway</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Cross‑platform policy gate (Anthropic MCP)</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Block prompt‑injection/tool overreach pre‑execution; validate plan & schema pins</li>
                    <li><strong>Buyer:</strong> AI Platform / AppSec</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}products/gateway/`}>Quickstart</a><a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/mcp-gateway/" target="_blank" rel="noopener">Docs ↗</a></div>
            </div>
            <div class="glass-card" data-cat="secure" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">AuthZEN PDP</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Decisions in milliseconds (OpenID AuthZEN)</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Standardized decisions + constraints/obligations + TTL → consistent enforcement across agents</li>
                    <li><strong>Buyer:</strong> IAM / Identity Architecture</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}products/pdp/`}>Open Reference</a><a class="btn" href="https://openid.net/wg/azn/" target="_blank" rel="noopener">AuthZEN ↗</a></div>
            </div>
            <div class="glass-card" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">IdP</h3><span class="chip chip--success">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Agent Passports & Consent</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Scoped, least‑privilege tokens and on‑behalf‑of flows — no long‑lived secrets</li>
                    <li><strong>Buyer:</strong> IAM / AppSec</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}products/idp/`}>Open Docs</a></div>
            </div>
            <div id="vds" class="glass-card" data-cat="build" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">VDS (Virtual Directory Server)</h3><span class="chip" data-badge-info="Coming soon">Coming soon</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Directory abstraction for IGA scenarios</div>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn" href={`${import.meta.env.BASE_URL}contact/`}>Join waitlist</a></div>
            </div>
            <div class="glass-card" data-cat="audit" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">Data Collector</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Spend & usage with receipts</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Per‑call cost & receipts for audit/FinOps — attribute dollars to policy, user, and tool</li>
                    <li><strong>Buyer:</strong> FinOps / Audit</li>
                </ul>
                <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}products/data-collector/`}>View Receipts</a></div>
            </div>
            <div class="glass-card" data-cat="audit" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">Receipt Vault</h3></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">Proof / non‑repudiation (hash‑chained receipts)</div>
                <ul style="color:#9ba3b7;line-height:1.7;margin:0 0 10px;padding-left:18px">
                    <li><strong>Outcome:</strong> Verifiable evidence: decision, policy hash, schema pin, cost</li>
                    <li><strong>Buyer:</strong> Audit / Compliance</li>
                </ul>
                <div style="opacity:.8;margin-bottom:6px">Receipt sample (6 lines)</div>
                <pre id="receipt-sample" class="glass-card" style="padding:12px;overflow:auto"><code>{`
{ "decision_id":"d-9f2",
  "policy_hash":"…a1c",
  "tool_schema_hash":"…7b9",
  "cost_usd":0.012,
  "ttl_ms":5000 }
`}</code></pre>
                <div style="opacity:.7;margin-top:8px;font-size:14px">Label: <em>Test Environment — Production Format</em></div>
                <div style="display:flex;gap:8px;flex-wrap:wrap;margin-top:10px">
                    <a class="btn btn-primary" href={`${import.meta.env.BASE_URL}products/receipts/`}>Open Receipt Vault</a>
                    <a class="btn" data-ev="artifact_view" data-label="receipt-min" href={`${import.meta.env.BASE_URL}resources/artifacts/receipt-min.json`} download>Download sample</a>
                </div>
            </div>
            <div class="glass-card" data-cat="build" style="padding:16px">
                <div style="display:flex;justify-content:space-between;align-items:center"><h3 style="margin:0">CRUDService</h3><span class="chip chip--success" data-badge-info="GA">GA</span></div>
                <div style="color:#9ba3b7;margin:6px 0 10px">5‑minute Tool Factory</div>
                <div class="glass-card" id="products-crud-compare" style="padding:12px">
                    <div style="display:grid;grid-template-columns:1fr 1fr;gap:8px">
                        <div>
                            <div style="font-weight:700;margin-bottom:4px;color:#9ba3b7">Without CRUD Service</div>
                            <ul style="color:#9ba3b7;line-height:1.7;margin:0;padding-left:18px">
                                <li>~6 weeks per API integration</li>
                                <li>Custom code, per platform</li>
                                <li>One stack at a time</li>
                                <li>Unclear guardrails</li>
                            </ul>
                        </div>
                        <div>
                            <div style="font-weight:700;margin-bottom:4px;color:var(--color-accent)">With CRUD Service</div>
                            <ul style="color:#9ba3b7;line-height:1.7;margin:0;padding-left:18px">
                                <li><strong>~5 minutes</strong> from API to tool</li>
                                <li><strong>No code</strong>, publish once</li>
                                <li><strong>MCP, Copilot, OpenAI Functions</strong></li>
                                <li><strong>Schema pins + policy hooks built‑in</strong></li>
                            </ul>
                        </div>
                    </div>
                    <div style="margin-top:8px;color:#9ba3b7;font-size:.85rem">Times are representative; shown live in demo.</div>
                </div>
                <div style="display:flex;gap:8px;flex-wrap:wrap;margin-top:10px"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}products/crud/`}>Quickstart</a><a class="btn" href={`${import.meta.env.BASE_URL}resources/research/`}>Adapter catalog</a></div>
            </div>
        </div>
    </section>
    <script>
        (function(){
            try{
                const def=(location.hash?location.hash.substring(1):'build').toLowerCase();
                const buttons=[...document.querySelectorAll('button[data-tab]')];
                const cards=[...document.querySelectorAll('[data-cat]')];
                function setTab(tab){
                    buttons.forEach(b=> b.setAttribute('aria-pressed', String(b.getAttribute('data-tab')===tab)));
                    cards.forEach(c=>{
                        const cat=c.getAttribute('data-cat');
                        (c).style.display = (tab==='all' || tab===cat) ? '' : 'none';
                    });
                    (window).dataLayer=(window).dataLayer||[];
                    (window).dataLayer.push({event:'tab_select', tab});
                    history.replaceState(null, '', '#'+tab);
                }
                buttons.forEach(b=> b.addEventListener('click', ()=>{ const t=b.getAttribute('data-tab'); if(t){ setTab(t); } }));
                window.addEventListener('hashchange', ()=>{ const h=(location.hash||'#build').substring(1); setTab(h); });
                setTab(def);
            }catch{}
        })();
    </script>
    <section class="container" style="padding:8px 0 16px">
        <h2 class="section-title">Complete Control Stack</h2>
        <div class="glass-card" style="padding:16px">
            <ul style="color:#9ba3b7;line-height:1.8;margin:0 0 10px;padding-left:18px">
                <li><strong>Pre‑execution (MCP Gateway):</strong> validate <em>plan & schema pins</em>; block bad calls <em>before</em> models run.</li>
                <li><strong>Authorization (AuthZEN PDP):</strong> standardized <em>who/what/for whom/constraints</em> (+ obligations/TTL).</li>
                <li><strong>Runtime (ARIA Shield):</strong> <em>budgets (HTTP 402)</em>, parameter allow‑lists, egress filters; cost attribution.</li>
            </ul>
            <div style="display:flex;gap:8px;flex-wrap:wrap"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}products/gateway/`}>Security brief</a><a class="btn" href={`${import.meta.env.BASE_URL}products/pdp/`}>Reference</a></div>
        </div>
    </section>
    <section class="container" style="padding:8px 0 24px">
        <h2 class="section-title">Proof (last 30 days)</h2>
        <div class="glass-card" style="padding:12px;display:flex;gap:16px;flex-wrap:wrap;color:#9ba3b7">
            <div><strong>Receipts/day</strong> — __k</div>
            <div><strong>Spend blocked (402)</strong> — __%</div>
            <div><strong>Governed endpoints</strong> — __</div>
        </div>
    </section>
    <section class="container" style="padding:8px 0 4px">
        <h2 class="section-title">Works with</h2>
        <div class="chip-row" style="display:flex;gap:8px;flex-wrap:wrap;color:#9ba3b7">
            <span class="chip">Anthropic MCP</span><span class="chip">Microsoft Copilot</span><span class="chip">OpenAI Functions</span><span class="chip">AWS Bedrock</span><span class="chip">Google Vertex</span><span class="chip">LangChain/LangGraph</span>
        </div>
    </section>
    <section class="container" style="padding:8px 0 24px">
        <h2 class="section-title">Included by tier</h2>
        <div class="glass-card" style="padding:16px">
            <div style="display:grid;grid-template-columns:180px repeat(3,140px);gap:8px;align-items:center">
                <div></div><div><strong>Starter</strong></div><div><strong>Pro</strong></div><div><strong>Enterprise</strong></div>
                <div>Tool Registry</div><div>✔</div><div>✔</div><div>✔</div>
                <div>MCP Gateway</div><div>✔</div><div>✔</div><div>✔</div>
                <div>CRUDService</div><div>✔</div><div>✔</div><div>✔</div>
                <div>AuthZEN PDP (core)</div><div>✔</div><div>✔</div><div>✔</div>
                <div>ARIA Shield</div><div></div><div>✔</div><div>✔</div>
                <div>Receipt Vault</div><div></div><div>✔</div><div>✔</div>
                <div>Data Collector</div><div></div><div>✔</div><div>✔</div>
            </div>
        </div>
    </section>
    <section class="container" style="padding:8px 0 24px">
        <h2 class="section-title">Pricing</h2>
        <div class="glass-card" style="padding:16px">
            <p style="color:#9ba3b7;margin:0 0 10px"><strong>Starting at $500 / governed endpoint / month</strong> · usage (decisions/receipts) · author seats</p>
            <div style="display:flex;gap:10px;flex-wrap:wrap"><a class="btn btn-primary" href={`${import.meta.env.BASE_URL}pricing/`}>Compare tiers</a><a class="btn" href={`${import.meta.env.BASE_URL}contact/`}>Contact sales</a><a class="btn" href={`${import.meta.env.BASE_URL}docs/self-host/`}>Self‑host install</a></div>
        </div>
    </section>
	<section class="container" style="padding:8px 0 24px">
		<h2 class="section-title">Deep technical docs</h2>
		<div style="display:flex;gap:12px;flex-wrap:wrap">
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/bff/explanation/overview/">ARIA Shield Overview</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/aria-shield/">ARIA Shield Docs</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/pdp/">PDP Reference</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/mcp-gateway/">MCP Gateway Docs</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/idp/">IdP Docs</a>
		</div>
	</section>
    <style>
        .container a:link, .container a:visited { color: var(--color-primary); text-decoration: none; }
        .container a:hover { text-decoration: underline; }
    </style>
    <script>
        (function(){
            try{
                (window).dataLayer=(window).dataLayer||[];
                const sample=document.getElementById('receipt-sample');
                if(sample && 'IntersectionObserver' in window){
                    const io=new IntersectionObserver((entries)=>{
                        entries.forEach(e=>{ if(e.isIntersecting){ (window).dataLayer.push({event:'receipt_sample_view'}); io.disconnect(); } });
                    },{threshold:.6});
                    io.observe(sample);
                }
                const compare=document.querySelector('#products-crud-compare')||document.querySelector('div.glass-card h3:nth-child(1)');
                if(compare && 'IntersectionObserver' in window){
                    const io=new IntersectionObserver((entries)=>{
                        entries.forEach(e=>{ if(e.isIntersecting){ (window).dataLayer.push({event:'crud_compare_view'}); io.disconnect(); } });
                    },{threshold:.35});
                    io.observe(compare as Element);
                }
                const crudCard=document.querySelector('h3:contains("CRUDService")')?.parentElement?.parentElement;
                let t0=0; let sent=false;
                function onIn(){ if(!sent){ t0=performance.now(); } }
                function onOut(){ if(!sent && t0){ const ms=Math.round(performance.now()-t0); (window).dataLayer.push({event:'section_time', section:'crud_service', ms}); sent=true; } }
                if(crudCard && 'IntersectionObserver' in window){
                    const io2=new IntersectionObserver((entries)=>{ entries.forEach(e=> e.isIntersecting ? onIn() : onOut()); },{threshold:.6});
                    io2.observe(crudCard);
                }
                document.querySelectorAll('[data-badge-info]')?.forEach(el=>{
                    el.addEventListener('mouseenter', ()=>{ (window).dataLayer.push({event:'badge_info_open', badge: el.getAttribute('data-badge-info')}); });
                });
            }catch{}
        })();
    </script>

</Base>
