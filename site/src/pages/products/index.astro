---
import Base from '../../layouts/Base.astro';
const title = 'Products — EmpowerNow';
const description = 'IdP, PDP, ARIA MCP Gateway, ARIA Shield, Data Collector, CRUD Service. Bundled: Tool Registry, Receipt Vault, Membership.';
const canonical = '/products/';
---
<Base title={title} description={description} canonical={canonical}>
	<section class="container" style="padding:56px 0 24px">
		<h1 class="display">Products</h1>
		<div class="grid-3">
			<a class="glass-card" href={`${import.meta.env.BASE_URL}products/aria-shield/`} style="padding:16px" data-ev="cta_click" data-label="product_card" data-position="aria-shield">
				<h3>ARIA Shield</h3>
				<p style="color:#9ba3b7">Application-aware BFF and governance</p>
			</a>
			<a class="glass-card" href={`${import.meta.env.BASE_URL}products/gateway/`} style="padding:16px" data-ev="cta_click" data-label="product_card" data-position="gateway">
				<h3>MCP Gateway</h3>
				<p style="color:#9ba3b7">Agent/tool policy enforcement</p>
			</a>
			<a class="glass-card" href={`${import.meta.env.BASE_URL}products/pdp/`} style="padding:16px" data-ev="cta_click" data-label="product_card" data-position="pdp">
				<h3>AuthZEN PDP</h3>
				<p style="color:#9ba3b7">Fine-grained authorization</p>
			</a>
			<a class="glass-card" href={`${import.meta.env.BASE_URL}products/idp/`} style="padding:16px" data-ev="cta_click" data-label="product_card" data-position="idp">
				<h3>IdP</h3>
				<p style="color:#9ba3b7">Agent Passports & Consent</p>
			</a>
			<!-- Bundled components moved below -->
			<a class="glass-card" href="#vds" style="padding:16px" data-ev="cta_click" data-label="product_card" data-position="vds">
				<h3>VDS (Virtual Directory Server)</h3>
				<p style="color:#9ba3b7">Coming soon</p>
			</a>
			<a class="glass-card" href={`${import.meta.env.BASE_URL}products/data-collector/`} style="padding:16px" data-ev="cta_click" data-label="product_card" data-position="data-collector">
				<h3>Data Collector</h3>
				<p style="color:#9ba3b7">Spend & usage analytics</p>
			</a>
			<a class="glass-card" href={`${import.meta.env.BASE_URL}products/crud/`} style="padding:16px" data-ev="cta_click" data-label="product_card" data-position="crud">
				<h3>CRUD Service</h3>
				<p style="color:#9ba3b7">Secure data APIs</p>
			</a>
		</div>
	</section>
	<section class="container" style="padding:8px 0 24px">
		<h2 class="section-title">Bundled components</h2>
		<ul>
			<li>Tool Registry — included with ARIA MCP Gateway</li>
			<li>Membership Graph — included with PDP</li>
			<li>Receipt Vault — included in Pro/Enterprise tiers</li>
		</ul>
	</section>
	<section class="container" style="padding:8px 0 24px">
		<h2 class="section-title">Deep technical docs</h2>
		<div style="display:flex;gap:12px;flex-wrap:wrap">
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/bff/explanation/overview/">ARIA Shield Overview</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/aria-shield/">ARIA Shield Docs</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/pdp/">PDP Reference</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/mcp-gateway/">MCP Gateway Docs</a>
			<a class="btn" href="https://empowerid.github.io/empowernow_docs/docs/services/idp/">IdP Docs</a>
		</div>
	</section>
</Base>
