---
import Base from '../layouts/Base.astro';
import LogoWall from '../components/LogoWall.astro';
---
<Base title="EmpowerNow – Identity & Authorization Fabric" description="AI-native identity orchestration and AuthZEN-compliant authorization platform" canonical="/">
    <section class="container hero-ambient" style="padding:120px 0 80px">
		<div style="display:flex;gap:64px;align-items:center;flex-wrap:wrap">
			<div style="flex:1 1 420px;min-width:320px;max-width:560px">
				<div style="display:inline-block;padding:8px 24px;border:1px solid var(--border-strong);border-radius:999px;color:var(--on-surface);background:var(--surface-2);font-weight:600;margin-bottom:32px">Designed with AI, for AI</div>
				<h1 class="display" style="font-size:60px;line-height:1.1;margin:0 0 12px">Secure every human, service, and AI agent with one <span style="background:linear-gradient(135deg,var(--color-accent),var(--color-primary));-webkit-background-clip:text;background-clip:text;-webkit-text-fill-color:transparent">Identity & Authorization Fabric</span></h1>
                <p style="color:#9ba3b7;max-width:720px;margin:0 0 6px">Real‑time authorization, budgets, and audit across ARIA Shield (gateway), Authentication, Authorization, Automation Studio, and Inventory.</p>
                <p style="color:#9ba3b7;max-width:720px;margin:0 0 20px"><strong>Create once → publish across platforms.</strong> Neutral by design; prove every action with receipts.</p>
                <ul style="list-style:none;padding:0;margin:18px 0 28px;max-width:640px;color:#9ba3b7">
                    <li style="display:flex;gap:8px;margin-bottom:8px"><span style="color:var(--color-accent)">•</span> Real‑time authorization on every request</li>
                    <li style="display:flex;gap:8px;margin-bottom:8px"><span style="color:var(--color-accent)">•</span> Policy‑enforced budgets and spend limits</li>
                    <li style="display:flex;gap:8px;margin-bottom:8px"><span style="color:var(--color-accent)">•</span> Guardrails to reduce data exfiltration risk</li>
                    <li style="display:flex;gap:8px"><span style="color:var(--color-accent)">•</span> Cryptographic receipts for audit and compliance</li>
                </ul>
                <div style="display:flex;gap:12px;flex-wrap:wrap">
                    <a class="btn btn-primary" data-ev="cta_click" data-cta-level="hard" data-product="na" data-persona="na" data-stage="na" data-label="hero-demo" data-position="hero" href={`${import.meta.env.BASE_URL}resources/demo/`}>Watch the 10‑min Demo</a>
                    <a class="btn" data-ev="cta_click" data-cta-level="soft" data-product="na" data-persona="na" data-stage="awareness" data-label="hero-quickstart" data-position="hero" href={`${import.meta.env.BASE_URL}docs/`}>Open Quickstart</a>
                </div>
                <div style="margin-top:12px;display:flex;gap:8px;flex-wrap:wrap;color:#9ba3b7">
                    <span class="chip">Anthropic MCP</span><span class="chip">OpenAI Functions</span><span class="chip">Microsoft Copilot</span><span class="chip">Google Vertex</span><span class="chip">AWS Bedrock</span><span class="chip">LangChain/LangGraph</span>
                </div>
				<div style="margin-top:8px"><a href={`${import.meta.env.BASE_URL}solutions/zero-token-spas/`} style="color:var(--color-primary);text-decoration:none">See how it works →</a></div>
			</div>
            <div class="parallax-glow" style="flex:1 1 420px;min-width:320px;max-width:520px;margin-top:-12px">
                {(await import('../components/HeroComposite.astro')).default({})}
            </div>
		</div>
	</section>
	<script>
		if (matchMedia('(hover:hover) and (pointer:fine) and (min-width:1024px)').matches) {
			const root = document.querySelector('.parallax-glow');
			if (root) {
				document.addEventListener('mousemove', (e) => {
					const r = root.getBoundingClientRect();
					const mx = e.clientX - (r.left + r.width/2);
					const my = e.clientY - (r.top + r.height/2);
					(root as HTMLElement).style.setProperty('--mx', mx + 'px');
					(root as HTMLElement).style.setProperty('--my', my + 'px');
				});
			}
		}
	</script>
    <LogoWall title="Trusted by" logos={[
        {alt:'ExampleCo',src:`${import.meta.env.BASE_URL}favicon.svg`},
        {alt:'Contoso',src:`${import.meta.env.BASE_URL}favicon.svg`},
        {alt:'Fabrikam',src:`${import.meta.env.BASE_URL}favicon.svg`},
        {alt:'Northwind',src:`${import.meta.env.BASE_URL}favicon.svg`}
    ]} />
    <section class="container" style="padding:8px 0 0">
        <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:16px">
            <div class="glass-card" style="padding:16px">
                <p style="color:#9ba3b7;margin:0">“The AuthZEN decision explorer cut our policy debugging time from days to minutes.”</p>
                <div style="margin-top:8px;color:#9ba3b7;font-size:.9rem">Security Architect, Fortune 100</div>
            </div>
            <div class="glass-card" style="padding:16px">
                <p style="color:#9ba3b7;margin:0">“402 budgets and receipts made AI spend predictable and audit‑ready for finance.”</p>
                <div style="margin-top:8px;color:#9ba3b7;font-size:.9rem">Head of FinOps, Global SaaS</div>
            </div>
        </div>
    </section>
    <section class="container" style="padding:8px 0 24px">
        <div class="glass-card" style="padding:16px;display:flex;gap:12px;flex-wrap:wrap;align-items:center;justify-content:center;color:#9ba3b7">
            <span class="chip chip--outline-cyan">Neutral by design</span>
            <span class="chip chip--outline-violet">OEM/white‑label friendly</span>
            <a class="btn" href={`${import.meta.env.BASE_URL}company/why-neutral/`}>Why neutral →</a>
        </div>
    </section>
	<div class="section-divider"></div>
    <section class="container surface-2" style="padding:40px 0;border-radius:12px">
        <div style="text-align:center;margin-bottom:28px">
            <h2 style="font-size:42px;margin:0 0 6px">Outcomes that matter</h2>
            <p style="color:#B3BCD2;max-width:760px;margin:0 auto">Audit you can prove. Spend you can control. Ship with confidence. These are the measurable advantages teams report in the first 90 days.</p>
        </div>
        <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:24px">
            <div class="glass-card" style="padding:24px">
                <h3 style="margin:0 0 8px">AI you can audit</h3>
                <ul style="margin:0;color:#9ba3b7;line-height:1.7;padding-left:18px">
                    <li>Authorization on every request</li>
                    <li>Guardrails for egress/content</li>
                    <li>Signed, hash‑chained receipts</li>
                </ul>
            </div>
            <div class="glass-card" style="padding:24px">
                <h3 style="margin:0 0 8px">Spend under control</h3>
                <ul style="margin:0;color:#9ba3b7;line-height:1.7;padding-left:18px">
                    <li>Budgets and per‑route caps</li>
                    <li>Over‑cap returns 402 (pre‑exec)</li>
                    <li>Usage by model, tool, team</li>
                </ul>
            </div>
            <div class="glass-card" style="padding:24px">
                <h3 style="margin:0 0 8px">Ship with confidence</h3>
                <ul style="margin:0;color:#9ba3b7;line-height:1.7;padding-left:18px">
                    <li>Config‑as‑code, PR‑gated</li>
                    <li>SaaS, private cloud, self‑host</li>
                    <li>Adopt incrementally</li>
                </ul>
            </div>
        </div>
    </section>
    <div class="section-divider"></div>
    <section class="container section-spine surface-2" style="padding:40px 0;border-radius:12px">
        <div style="text-align:center;margin-bottom:24px">
            <h2 style="font-size:42px;margin:0 0 6px">What you get</h2>
            <p style="color:#B3BCD2;max-width:760px;margin:0 auto">Five building blocks that interlock. Start with one, or deploy the full fabric as your platform standard.</p>
        </div>
        <div style="display:grid;grid-template-columns:1.2fr 1fr;gap:28px;align-items:center">
            <div>
                <h3 style="margin:0 0 6px;display:flex;align-items:center;gap:10px">{await (await import('../components/icons/Passport.astro')).default({})}ARIA Shield (Gateway)</h3>
                <p style="color:#9ba3b7;margin:0 0 14px">One secure front door; allow/deny with reasons; budget checks; no browser tokens.</p>
                <h3 style="margin:16px 0 6px;display:flex;align-items:center;gap:10px">{await (await import('../components/icons/AuthZEN.astro')).default({})}Authorization (PDP)</h3>
                <p style="color:#9ba3b7;margin:0">OpenID AuthZEN decisions with constraints, obligations, and TTL.</p>
            </div>
            <div class="glass-card" style="padding:20px;min-height:140px">
                <h3 style="margin:0 0 6px">Authentication (IdP)</h3>
                <p style="color:#9ba3b7;margin:0">Passports via Token Exchange + RAR; pairwise subjects; optional DPoP.</p>
            </div>
        </div>
        <div style="display:grid;grid-template-columns:1fr 1.2fr;gap:28px;align-items:center;margin-top:24px">
            <div class="glass-card" style="padding:20px;min-height:140px">
                <h3 style="margin:0 0 6px">Automation Studio</h3>
                <p style="color:#9ba3b7;margin:0">No‑code MCP tools; per‑run policy; approvals, retries, and receipts.</p>
            </div>
            <div>
                <h3 style="margin:0 0 6px;display:flex;align-items:center;gap:10px">{await (await import('../components/icons/PinPlan.astro')).default({})}Inventory</h3>
                <p style="color:#9ba3b7;margin:0">Fresh identity & usage with lineage; feeds PDP PIPs and analytics.</p>
            </div>
        </div>
    </section>
    <section class="container" style="padding:24px 0 8px">
        <div class="glass-card" style="padding:20px;display:flex;gap:12px;flex-wrap:wrap;align-items:center;justify-content:center">
            <strong style="color:#9ba3b7">Create</strong>
            <span class="chip">→</span>
            <a class="btn" href={`${import.meta.env.BASE_URL}products/crud/`}>Automation Studio</a>
            <span class="chip">→</span>
            <strong style="color:#9ba3b7">Decide</strong>
            <span class="chip">→</span>
            <a class="btn" href={`${import.meta.env.BASE_URL}products/pdp/`}>AuthZEN PDP</a>
            <span class="chip">→</span>
            <strong style="color:#9ba3b7">Enforce</strong>
            <span class="chip">→</span>
            <a class="btn" href={`${import.meta.env.BASE_URL}products/gateway/`}>MCP Gateway</a>
            <span class="chip">/</span>
            <a class="btn" href={`${import.meta.env.BASE_URL}products/aria-shield/`}>ARIA Shield</a>
            <span class="chip">→</span>
            <strong style="color:#9ba3b7">Prove</strong>
            <span class="chip">→</span>
            <a class="btn" href={`${import.meta.env.BASE_URL}products/receipts/`}>Receipt Vault</a>
        </div>
    </section>
	<div class="section-divider"></div>
    <section class="container section-spine bg-grid bg-conic-cyan surface-3" style="padding:60px 0;border-radius:12px">
		<div style="text-align:center;margin-bottom:40px">
            <h2 class="section-title" style="font-size:40px;margin:0 0 8px">Our Products</h2>
			<p style="color:#9ba3b7">Enterprise‑grade identity orchestration and authorization infrastructure.</p>
		</div>
        <div style="display:grid;grid-template-columns:1.4fr 1fr 1fr;gap:24px;align-items:stretch">
            <div class="glass-card card-glow" style="padding:28px;grid-column:span 2">
				<div style="font-weight:700;font-size:14px;color:#9ba3b7;margin-bottom:8px">Lead Engine</div>
                <h3 class="card-title" style="margin:0 0 8px">Authorization Studio</h3>
				<p style="color:var(--color-accent);margin:0 0 8px">OpenID AuthZEN PDP</p>
				<p style="color:#9ba3b7">Industry‑standard policy decision point with delegation graphs, batch evaluation, and explainable decisions.</p>
				<div style="display:flex;gap:12px;align-items:center;margin-top:6px"><a class="card-cta" href={`${import.meta.env.BASE_URL}products/pdp/`}>Learn more →</a><a class="card-cta" href="https://empowerid.github.io/empowernow_docs/docs/services/pdp/" target="_blank" rel="noopener" aria-label="PDP Docs (opens in new tab)">Docs ↗</a></div>
			</div>
            <div class="glass-card card-glow" style="padding:28px">
				<div style="font-weight:700;font-size:14px;color:#9ba3b7;margin-bottom:8px">Lead Engine</div>
                <h3 class="card-title" style="margin:0 0 8px">Automation Studio — CRUD Service</h3>
                <p style="color:var(--color-accent);margin:0 0 8px">Tool Factory for Agents</p>
                <p style="color:#9ba3b7">Turn any API/DB into agent‑safe MCP tools with idempotent workflows, approvals, and receipts.</p>
				<div style="display:flex;gap:12px;align-items:center;margin-top:6px"><a class="card-cta" href={`${import.meta.env.BASE_URL}products/orchestration/`}>Learn more →</a><a class="card-cta" href="https://empowerid.github.io/empowernow_docs/docs/services/orchestration/" target="_blank" rel="noopener" aria-label="Orchestration Docs (opens in new tab)">Docs ↗</a></div>
			</div>
			<div class="glass-card card-glow" style="padding:28px">
                <h3 class="card-title" style="margin:0 0 8px">Authentication Studio</h3>
                <p class="chip chip--success" style="margin:0 0 8px;display:inline-flex">FAPI 2.0‑Ready</p> <span class="chip chip--violet chip--spec" style="margin-left:8px">New</span>
				<p style="color:#9ba3b7">Passkeys, OIDC, adaptive risk; issue FAPI‑profiled tokens and fine‑grained on‑behalf‑of credentials for agents.</p>
				<div style="display:flex;gap:12px;align-items:center;margin-top:6px"><a class="card-cta" href={`${import.meta.env.BASE_URL}products/idp/`}>Learn more →</a><a class="card-cta" href="https://empowerid.github.io/empowernow_docs/docs/services/idp/" target="_blank" rel="noopener" aria-label="IdP Docs (opens in new tab)">Docs ↗</a></div>
			</div>
			<div class="glass-card card-glow" style="padding:28px">
                <h3 class="card-title" style="margin:0 0 8px">Inventory Studio</h3>
				<p style="color:var(--color-accent);margin:0 0 8px">Universal Collector</p>
				<p style="color:#9ba3b7">Discover, diff, and reconcile identities at scale with policy‑gated writes.</p>
				<div style="display:flex;gap:12px;align-items:center;margin-top:6px"><a class="card-cta" href={`${import.meta.env.BASE_URL}products/registry/`}>Learn more →</a><a class="card-cta" href="https://empowerid.github.io/empowernow_docs/docs/services/registry/" target="_blank" rel="noopener" aria-label="Registry Docs (opens in new tab)">Docs ↗</a></div>
			</div>
		</div>
	</section>
    <section class="container section-spine" style="padding:40px 0">
		<h2 style="font-size:32px;margin:0 0 12px">Standards & Interop</h2>
        <ul style="color:#9ba3b7;line-height:1.8;margin:0;columns:2;column-gap:24px">
            <li><span class="chip chip--violet chip--spec" style="margin-right:8px">AuthZEN</span> OpenID Authorization API — evaluation endpoints</li>
            <li><span class="chip chip--violet chip--spec" style="margin-right:8px">OAuth</span> Token Exchange (RFC 8693), RAR (RFC 9396), DPoP (RFC 9449)</li>
            <li><span class="chip chip--cyan" style="margin-right:8px">MCP</span> Model Context Protocol for agent‑tool calls</li>
            <li><span class="chip chip--success" style="margin-right:8px">Receipts</span> Signed, hash‑chained receipts for auditability</li>
		</ul>
	</section>
    <section class="container surface-2" style="padding:60px 0 120px;text-align:center;position:relative;border-radius:12px">
		<div style="position:absolute;top:-24px;left:0;right:0;height:1px;background:linear-gradient(90deg, transparent, rgba(0,231,246,.35), transparent)"></div>
		<h2 style="font-size:40px;margin:0 0 12px">Ready to get started?</h2>
		<p style="color:#9ba3b7;max-width:720px;margin:0 auto 20px">Join teams using EmpowerNow for identity orchestration and AuthZEN‑compliant authorization.</p>
        <div style="display:flex;gap:12px;justify-content:center;flex-wrap:wrap">
			<a class="btn btn-primary" href={`${import.meta.env.BASE_URL}resources/demo/`}>Watch the 10‑min Demo</a>
            <a class="btn" style="border-color:var(--color-accent);color:var(--color-accent);background:transparent" href={`${import.meta.env.BASE_URL}demo/`}>Book a Demo</a>
            <span class="chip chip--success" style="align-self:center">AA compliant</span>
		</div>
        <div class="glass-card" style="margin:16px auto 0;max-width:880px;padding:12px;display:flex;gap:16px;justify-content:center;flex-wrap:wrap;color:#9ba3b7">
            <div><strong>Receipts/day</strong> <span id="k_receipts">—</span></div>
            <div><strong>Spend blocked (402)</strong> <span id="k_blocked">—</span></div>
            <div><strong>Governed endpoints</strong> <span id="k_endpoints">—</span></div>
        </div>
	</section>
    <script>
        (function(){
            try{
                function t(n){ return n>=1000 ? (Math.round(n/100)/10)+'k' : String(n); }
                function run(){
                    const raw = localStorage.getItem('marketing_events_jsonl')||'';
                    const lines = raw.split('\n').filter(Boolean).map(l=>{ try{return JSON.parse(l);}catch{return null;}}).filter(Boolean);
                    const receipts = lines.filter(e=>e.event==='receipt').length;
                    const ctaclicks = lines.filter(e=>e.event==='cta_click').length;
                    const blocked = Math.round((lines.filter(e=>e.event==='budget_block').length / Math.max(1, ctaclicks))*100);
                    const endpoints = 10; // placeholder until backend metric
                    const R = document.getElementById('k_receipts');
                    const B = document.getElementById('k_blocked');
                    const E = document.getElementById('k_endpoints');
                    if(R) R.textContent = t(receipts);
                    if(B) B.textContent = blocked ? (blocked+'%') : '—';
                    if(E) E.textContent = String(endpoints);
                }
                run();
            }catch{}
        })();
    </script>
</Base>
