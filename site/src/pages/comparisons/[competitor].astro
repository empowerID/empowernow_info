---
import Base from '../../layouts/Base.astro';
import ComparisonTable from '../../components/ComparisonTable.astro';
const competitor = Astro.params.competitor || 'alternative';
const title = `EmpowerNow vs ${competitor}`;
const description = `Compare EmpowerNow with ${competitor}: capabilities and outcomes.`;
const canonical = `/comparisons/${competitor}/`;
const rows = [
	{ feature: 'AuthZ depth', us: 'AuthZEN PDP with constraints', them: 'Scopes and gateway policies' },
	{ feature: 'Agent safety', us: 'MCP Gateway + ARIA receipts', them: 'Limited/unspecified' },
];
---
<Base title={title} description={description} canonical={canonical}>
	<section class="container" style="padding:48px 0 24px">
		<h1>{title}</h1>
		<ComparisonTable rows={rows} ourLabel="EmpowerNow" theirLabel={competitor} />
	</section>
</Base>
