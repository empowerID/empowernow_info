import Base from '../../layouts/Base.astro';
const title = 'AI Gateway (ARIA Shield) vs Network API Gateway';
const description = 'Clarifying roles: ARIA Shield enforces budgets, authorization, and tool allow‑lists for agents; API gateways route and rate‑limit.';
const canonical = '/comparisons/gateway-vs-api-gateway/';
---
<Base title={title} description={description} canonical={canonical}>
  <section class="container" style="padding:48px 0 16px">
    <h1 class="display" style="margin:0 0 10px">AI Gateway vs API Gateway</h1>
    <p style="color:#9ba3b7;max-width:80ch">They complement each other but are not the same.</p>
  </section>
  <section class="container" style="padding:8px 0 64px">
    <div class="glass-card" style="padding:16px">
      <table class="comparison" style="width:100%;border-collapse:collapse;color:#e8ecff">
        <thead><tr><th style="text-align:left">Capability</th><th style="text-align:left">ARIA Shield (AI Gateway)</th><th style="text-align:left">API Gateway</th></tr></thead>
        <tbody>
          <tr><td>Budget enforcement</td><td>402 pre‑exec caps per route/agent</td><td>Not applicable</td></tr>
          <tr><td>Tool allow‑lists</td><td>Yes (MCP tools/resources)</td><td>No (generic routing)</td></tr>
          <tr><td>Schema pins</td><td>Yes, detects drift</td><td>No</td></tr>
          <tr><td>Authorization</td><td>PDP decisions with constraints/obligations</td><td>Basic authn/z; not policy‑aware per tool</td></tr>
          <tr><td>Routing & rate limits</td><td>Basic where needed</td><td>Primary strength</td></tr>
          <tr><td>Audit</td><td>Signed, hash‑chained receipts</td><td>Request logs</td></tr>
        </tbody>
      </table>
    </div>
  </section>
</Base>


