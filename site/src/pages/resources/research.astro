---
import Base from '../../layouts/Base.astro';
const title = 'Research Hub — Evidence‑first marketing';
const description = 'Explore competitor matrices, claims taxonomy, SERP logs, ROI models, and acceptance checklists in the docs research spine.';
const canonical = '/resources/research/';
const docs = 'https://empowerid.github.io/empowernow_docs';
---
<Base title={title} description={description} canonical={canonical}>
    <section class="container" style="padding:96px 0 24px">
        <h1 class="display" style="margin:0 0 8px">Research Hub</h1>
        <p style="color:#9ba3b7;max-width:860px">Evidence‑first library powering our marketing site. Browse normalized competitor data, claims taxonomy, SERP logs, ROI models, and acceptance checklists.</p>
    </section>
    <section class="container" style="padding:8px 0 80px">
        <div class="card-grid">
            <div class="ns-card">
                <h3>Research spine</h3>
                <p>Start here for folder map and flow.</p>
                <a class="card-cta" href={`${docs}/docs/marketing/research`} target="_blank" rel="noopener">Open ↗</a>
            </div>
            <div class="ns-card">
                <h3>Competitor sets</h3>
                <p>Per‑product JSONs with quotes, links, and capabilities.</p>
                <a class="card-cta" href={`${docs}/marketing/research/competitors/`} target="_blank" rel="noopener">Browse ↗</a>
            </div>
            <div class="ns-card">
                <h3>Matrices</h3>
                <p>Head‑to‑head capability matrices with evidence links.</p>
                <a class="card-cta" href={`${docs}/marketing/research/matrix/pdp`} target="_blank" rel="noopener">See PDP matrix ↗</a>
            </div>
            <div class="ns-card">
                <h3>Claims taxonomy</h3>
                <p>Vocabulary + schema for consistent claims.</p>
                <a class="card-cta" href={`${docs}/marketing/research/taxonomy/`} target="_blank" rel="noopener">View ↗</a>
            </div>
            <div class="ns-card">
                <h3>SERP logs</h3>
                <p>Keyword logs and strategies per product.</p>
                <a class="card-cta" href={`${docs}/marketing/research/serp/`} target="_blank" rel="noopener">Open ↗</a>
            </div>
            <div class="ns-card">
                <h3>ROI models</h3>
                <p>Per‑product levers and assumptions.</p>
                <a class="card-cta" href={`${docs}/docs/website_copy/primers/primer_roi_calculator`} target="_blank" rel="noopener">Primer ↗</a>
            </div>
        </div>
    </section>
</Base>


