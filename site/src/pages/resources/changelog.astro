---
import Base from '../../layouts/Base.astro';
const title = 'Changelog & Adapters';
const description = 'Weekly ship cadence across adapters and studios.';
const canonical = '/resources/changelog/';
---
<Base title={title} description={description} canonical={canonical}>
    <section class="container" style="padding:48px 0 8px">
        <h1>Changelog</h1>
        <p style="color:#9ba3b7;max-width:880px">We ship adapters and improvements weekly. Highlights will be posted here.</p>
        <div class="glass-card" style="padding:16px;color:#9ba3b7">
            <ul style="margin:0;line-height:1.8">
                <li>Week 39 — Initial www updates: CRUD page, Primers/FAQs, Pricing, Metrics, Compare.</li>
                <li>Week 40 — Solutions counters wired to JSONL; PDP/IdP compare; Shield/MCP examples; Collector diagram; Why Neutral + Changelog pages; competitor evidence & SERP expanded.</li>
            </ul>
        </div>
    </section>
</Base>


