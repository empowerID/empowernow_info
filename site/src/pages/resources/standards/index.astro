---
import Base from '../../../layouts/Base.astro';
const title = 'Standards Fundamentals (Primers)';
const description = 'SEO-friendly primers for OAuth, OIDC, PKCE, RAR, PAR, JARM, FAPI 2.0, SCIM, CIBA, MCP, CAEP, Token Exchange, Resource Indicators, DPoP, mTLS, DCR, AuthZEN.';
const canonical = '/resources/standards/';
const base = import.meta.env.BASE_URL;
const items = [
	{ slug:'oauth', label:'OAuth 2.0' },
	{ slug:'oidc', label:'OpenID Connect (OIDC)' },
	{ slug:'pkce', label:'PKCE' },
	{ slug:'rar', label:'Rich Authorization Requests (RAR)' },
	{ slug:'par', label:'Pushed Authorization Requests (PAR)' },
	{ slug:'jarm', label:'JARM' },
	{ slug:'fapi-2-0', label:'FAPI 2.0' },
	{ slug:'scim', label:'SCIM' },
	{ slug:'ciba', label:'CIBA' },
	{ slug:'mcp', label:'Model Context Protocol (MCP)' },
	{ slug:'caep', label:'CAEP' },
	{ slug:'token-exchange', label:'Token Exchange (RFC 8693)' },
	{ slug:'resource-indicators', label:'Resource Indicators (RFC 8707)' },
	{ slug:'dpop', label:'DPoP (RFC 9449)' },
	{ slug:'mtls', label:'OAuth mTLS (RFC 8705)' },
	{ slug:'dcr', label:'Dynamic Client Registration (RFC 7591/7592)' },
	{ slug:'authzen', label:'OpenID AuthZEN' },
	{ slug:'authzen-draft04', label:'OpenID AuthZEN Draft‑04' },
];
---
<Base title={title} description={description} canonical={canonical}>
	<section class="hero-plate page-stage" style={`padding:160px 0 64px;background-image:url(${base}images/backgrounds/bg-homepage-hero.jpg);background-size:cover;background-position:center;background-repeat:no-repeat`}>
		<div class="container" style="position:relative;z-index:1">
			<h1 class="display" style="margin:0 0 8px">Standards Fundamentals</h1>
			<p style="color:#9ba3b7;max-width:860px">Concise primers: why it matters, how it works, and where it's enforced (Gateway, Shield, PDP, IdP).</p>
		</div>
	</section>
	<section class="container" style="padding:8px 0 80px">
		<div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:16px">
			{items.map(i => (
				<a href={`${base}resources/standards/${i.slug}/`} class="glass-card" style="padding:16px;text-decoration:none;color:inherit">
					<h3 style="margin:0">{i.label}</h3>
				</a>
			))}
		</div>
		<div class="panel-glass" style="padding:16px;margin-top:16px">
			<strong>Looking for the authorization model?</strong>
			<div style="margin-top:8px">
				<a class="btn btn-ghost" href={`${base}resources/strategy/authz-model/`}>PDP/PEP/PIP/PAP explainer with diagram →</a>
			</div>
		</div>
	</section>
</Base>


